<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="startupManager" class="com.zutubi.pulse.bootstrap.DefaultStartupManager" autowire="byName">
        <property name="startupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.SlaveContextStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.SlaveSystemPropertiesStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.SlaveJettyStartupTask</value>
            </list>
        </property>
        <property name="postStartupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.SlaveStartedMessageStartupTask</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.zutubi.pulse.slave.SlaveConfigurationManager" init-method="init">
        <property name="systemPaths">
            <bean id="paths" class="com.zutubi.pulse.bootstrap.ConfigurableSystemPaths">
                <property name="systemRootString">
                    <value>slave/system</value>
                </property>
                <property name="tmpRootString">
                    <value>slave/system/tmp</value>
                </property>
                <property name="contentRootString">
                    <value>slave/src/www</value>
                </property>
                <property name="configRootString">
                    <value>slave/etc</value>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="pluginPaths" class="com.zutubi.pulse.plugins.ConfigurablePluginPaths">
        <property name="pluginConfigurationRootString" value="master/etc/osgi"/>
        <property name="internalPluginRootString" value="plugins/internal"/>
        <property name="prepackagedPluginRootString" value="plugins/prepackaged"/>
        <property name="userPluginRootString" value="user/plugins"/>
    </bean>

    <bean id="objectFactory" class="com.zutubi.pulse.spring.SpringObjectFactory"/>

</beans>
