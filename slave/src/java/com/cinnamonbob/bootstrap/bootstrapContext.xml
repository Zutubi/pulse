<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="initContext" class="com.cinnamonbob.bootstrap.SpringContextInitialisation"></bean>

    <bean id="startupManager" class="com.cinnamonbob.bootstrap.DefaultStartupManager">
        <property name="systemContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/databaseBootstrapContext.xml</value>
                <value>com/cinnamonbob/bootstrap/coreDatabaseContext.xml</value>
                <value>com/cinnamonbob/bootstrap/applicationContext.xml</value>
                <value>com/cinnamonbob/bootstrap/webserverContext.xml</value>
                <value>com/cinnamonbob/bootstrap/webworkContext.xml</value>
            </list>
        </property>
        <property name="startupRunnables">
            <list>
                <value>com.cinnamonbob.ResourceDiscoverer</value>
            </list>
        </property>
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.SimpleConfigurationManager" init-method="init">
    </bean>

    <bean id="dataSource" class="com.cinnamonbob.bootstrap.DataSourceBeanFactory" destroy-method="close"/>

</beans>
