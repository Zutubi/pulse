<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">

    <info organisation="cinnamonbob" module="master" status="integration">
        <ivyauthor name="cinnamonbob" url="http://www.cinnamonbob.com/"/>
        <description homepage="http://www.cinnamonbob.com/">
            description....
        </description>
    </info>

    <configurations>
        <conf name="external" description="external dependencies"/>
        <conf name="release"/>
        <conf name="test"/>
    </configurations>

    <publications>
        <artifact name="master" type="jar" conf="release"/>
    </publications>

    <dependencies>

        <dependency org="cinnamonbob" name="server-core" rev="latest.integration" conf="release->release"/>
        <dependency org="cinnamonbob" name="server-core" rev="latest.integration" conf="external->external"/>
        <dependency org="cinnamonbob" name="server-core" rev="latest.integration" conf="test->test"/>

        <!-- command line interface. -->
        <dependency org="apache" name="commons-cli" rev="1.0" conf="external->default"/>

        <!-- temporal scheduling -->
        <dependency org="opensymphony" name="quartz" rev="1.5.1" conf="external->default"/>

        <!-- not using this at the moment. -->
        <!--<dependency org="displaytag" name="displaytag" rev="1.0" conf="external->default"/>-->

        <dependency org="sun" name="javamail" rev="1.3.2" conf="external->default"/>

        <!-- external notifications... -->
        <dependency org="ymsg" name="ymsg" rev="0.61" conf="external->default"/>
        
        <dependency org="apache" name="xmlrpc" rev="3.0a1" conf="external->default"/>

        <dependency org="sun" name="rome" rev="0.8" conf="external->default"/>

    </dependencies>


</ivy-module>
