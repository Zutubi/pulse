<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">

    <info organisation="zutubi" module="pulse-master" revision="1.0.2" status="release">
        <ivyauthor name="zutubi" url="http://www.zutubi.com/"/>
        <description homepage="http://www.zutubi.com/">
            description....
        </description>
    </info>

    <configurations>
        <conf name="release" description="Defines those packages that are included in the final release."/>
        <conf name="external" description="All of those packages not written by Zutubi."/>
        <conf name="build" description="All of the packages required during the build."/>
    </configurations>

    <publications>
        <artifact name="master" type="jar" conf="release,build"/>
    </publications>

    <dependencies>

        <dependency org="zutubi" name="pulse-server-core" rev="1.0.2" conf="release->release"/>
        <dependency org="zutubi" name="pulse-server-core" rev="1.0.2" conf="external->external"/>
        <dependency org="zutubi" name="pulse-server-core" rev="1.0.2" conf="build->build"/>

        <!-- command line interface. -->
        <dependency org="apache" name="commons-cli" rev="1.0" conf="external,build,release->default"/>

        <!-- temporal scheduling -->
        <dependency org="opensymphony" name="quartz" rev="20060404" conf="external,build,release->default"/>

        <!-- not using this at the moment. -->
        <dependency org="displaytag" name="displaytag" rev="1.0" conf="external,build,release->default"/>

        <dependency org="sun" name="javamail" rev="1.3.2" conf="external,build,release->default"/>

        <!-- external notifications... -->
        <dependency org="jive" name="smack" rev="2.2.0" conf="external,build,release->default"/>

        <dependency org="apache" name="xmlrpc" rev="2.0.1" conf="external,build,release->default"/>

        <dependency org="sun" name="rome" rev="0.8" conf="external,build,release->default"/>
        <dependency org="sun" name="rome-content" rev="0.4.1-20060508" conf="external,build,release->default"/>

        <dependency org="rife" name="jhighlight" rev="1.0" conf="external,build,release->default"/>

    </dependencies>

</ivy-module>
