#authorisationTags($principle)
#buildTags($buildResult.project $buildResult)
<html>
<head>
    <title>#wwtext("name=artifact") $!webwork.htmlEncode($artifact.path)</title>
</head>
<body>
    <h1>:: #wwtext("name=decorated.artifact") ::</h1>

#if($artifact.hasFeatures())
    <table class="decorated">
        #headingRow("decorated.features" 1)
        <tr>
            <td class="content">
                #fileArtifactFeatures($buildResult $commandResult $artifact)
            </td>
        </tr>
    </table>
#end
    
    <table class="decorated">
        <tr><th class="heading" colspan="2">$!webwork.htmlEncode($artifact.path)</th></tr>

    ## WARNING: this iterator cannot be resued!
    #foreach($line in $readerIterator)
        #if($action.notNull($action.getLineLevel($velocityCount)))
            #set($lineClass = $action.getLineLevel($velocityCount).toString().toLowerCase())
        #else
            #set($lineClass = "none")
        #end
        <tr>
            <td class="num-$lineClass"><a href="#$velocityCount" name="$velocityCount">$velocityCount</a></td>
            <td class="dec-$lineClass">$line</td>
        </tr>
    #end
    </table>
</html>
