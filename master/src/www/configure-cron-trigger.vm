<html>
<head>
    <title>create trigger</title>
</head>
<content tag="action">trigger.create</content>
<body>

    #parse("/template/includes/actionerrors.vm")

#bodytag (Form "action='addTrigger.action'" "method='post'")

    <h3>step 2: create cron trigger</h3>
    <fieldset>
        #tag (TextField "name='name'" "required='true'" "tabindex='1'")
        #tag (TextField "name='spec'" "tabindex='2'")
        #tag (TextField "name='cron'" "label=getText('trigger.cron')" "tabindex='3'")
    </fieldset>
    <fieldset class="submit">
        #tag (Submit "value=getText('save.name')" "name='save'" "tabindex='4'")
        #tag (Submit "value=getText('cancel.name')" "name='cancel'" "tabindex='5'")
    </fieldset>
#end
</body>
</html>
