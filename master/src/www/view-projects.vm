#helpTag("Projects+Section")
#authorisationTags($principle)
<content tag="selectedTab">projects</content>
<html>
<head>
    <title>#wwtext("name=projects")</title>
    <script type="text/javascript" src="$base/js/prototype.js"></script>
    <script type="text/javascript">
        #updater("$base/ajax/viewProjectsPanel.action" "panel" $principle)
    </script>
    #if ($rssEnabled)
        <link rel="alternate" type="application/rss+xml" title="RSS" href="rss.action"/>
    #end
</head>
<body>
    <div id="pagecontent">

#if($rssEnabled)
        <span class="action">
            <a class="unadorned" id="rss.builds" href="rss.action"><img alt="$action.getText('rss')" src="$base/images/feed-icon-16x16.gif"/></a>
        </span>
#end
    <h1>:: #wwtext("name=projects") ::</h1>

    <div id="panel">
        #parse("ajax/view-projects-panel.vm")
    </div>

#authorize("ifAllGranted=ROLE_ADMINISTRATOR")
    #licensed("require=canAddProject")
        <a href="addProject!input.action" id="project.add"><img alt="add" src="$base/images/add.gif"/> #wwtext("name=add.project")</a>
        &nbsp;
    #end
    <a href="addProjectGroup!input.action" id="project.group.add"><img alt="add" src="$base/images/add.gif"/> #wwtext("name=add.project.group")</a>
#end

    </div>
</body>
</html>
