<style type="text/css">
    .panel{
        border-bottom-style:dotted;
        border-right-style:dotted;
        border-left-style:dotted;
        border-bottom-color:gray;
        border-left-color:gray;
        border-right-color:gray;
        border-bottom-width:1px;
        border-right-width:1px;
        border-left-width:1px;
        margin-bottom:3em;
    }

    .header {
        padding:5px;
        background-color:#e8e8f3;
        border-top-width:1px;
        border-top-style:dotted;
        border-top-color:gray;
    }
</style>

<h2>$!webwork.htmlEncode($id)</h2>
<p></p>

#macro(actionHeader $action $img $onclick)
    <th><img alt="$action" src="$base/images/${img}.gif"/> <a href="#" onclick="$onclick; return false">$action</a></th>
#end

<table class="template-actions" cellspacing="5px">
    <tr>
        #actionHeader("configure" "pencil" "configureRecord('$path')")
        <td>jump to the configuration for this #i18n("key=label") #if(!$concrete) template #end</td>
    </tr>
#if(!$concrete)
    <tr>
        #actionHeader("add new" "add" "addToPath('$path', false)")
        <td>add a new #i18n("key=label") as a child of this template</td>
    </tr>
    <tr>
        #actionHeader("add new template" "add" "addToPath('$path', true)")
        <td>add a new #i18n("key=label") template as a child of this template</td>
    </tr>
#end
#if(!$rootTemplate || $node.children.size() == 0)
    <tr>
        #actionHeader("delete" "delete" "deletePath('$path')")
        <td>delete this #i18n("key=label") #if(!$concrete) template #end</td>
    </tr>
#end
</table>

