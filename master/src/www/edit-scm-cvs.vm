<html>
<head></head>
<content tag="action">scm.cvs.edit</content>
<body>
    #parse("/template/includes/actionerrors.vm")

#bodytag (Form "action='editCvs.action'" "method='post'")

    #tag (Hidden "name='id'")
    #tag (Hidden "name='project'")

    <h3>Edit scm</h3>

    <fieldset>
        #tag (TextField "required='true'" "name='cvs.name'" "label='scm.name'" "tabindex='1'")
        #tag (TextField "required='true'" "name='cvs.root'" "tabindex='2'")
        #tag (Password "name='cvs.password'" "tabindex='3'")
        #tag (TextField "name='cvs.path'" "label='scm.path'" "tabindex='4'")
    </fieldset>

    <fieldset class="submit">
        #tag (Submit "value=getText('save.name')" "name='save'" "tabindex='5'")
        #tag (Submit "value=getText('cancel.name')" "name='cancel'" "tabindex='6'")
    </fieldset>

 #end
</body>
</html>