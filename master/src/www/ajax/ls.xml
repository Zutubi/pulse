<!--
Create an object of the following format:

    object:{
        listing: [
            {
                id:string,
                file:string,
                type:string,
                container:boolean
            },....
        ]
    }

    id: a unique identifier for the listing entry within the context of this listing.
    file: the human readable string used to render this entry.
    type: the type of the entry.
    container: true if this entry can itself be listed, false otherwise.

-->
<object>
    <!-- action error handling -->
    <pair key="actionErrors">
        <array ref="actionErrors"></array>
    </pair>
    <pair key="actionMessages">
        <array ref="actionMessages"></array>
    </pair>
    <pair key="fieldErrors">
        <map ref="fieldErrors">
            <array/>
        </map>
    </pair>
    <!-- the listing definition -->
    <pair key="listing">
        <array ref="listing">
            <object>
                <pair key="id">id</pair>
                <pair key="file">name</pair>
                <pair key="type">type</pair>
                <pair key="container">container</pair>
                <pair key="actions"><array ref="actions"/></pair>
                <pair key="url">url</pair>
            </object>
        </array>
    </pair>
</object>
