#authorisationTags($principle)
<html>
<head>
    <title>create scm</title>
</head>
<content tag="action">scm.cvs.create</content>
<body>
    #parse("/template/includes/actionerrors.vm")

#bodytag (Form "action='createCvs.action'" "method='post'")

    #tag (Hidden "name='project'")
    <h3>create scm: step 2</h3>

    <fieldset>
        #tag (TextField "required='true'" "name='cvs.name'" "label='scm.name'" "tabindex='1'")
        #tag (TextField "name='cvs.path'" "label='scm.path'" "tabindex='2'")
        #tag (TextField "required='true'" "name='cvs.root'" "tabindex='3'")
        #tag (TextField "name='cvs.module'" "tabindex='4'")
        #tag (Password "name='cvs.password'" "tabindex='5'")
    </fieldset>

    <fieldset class="submit">
        #tag (Submit "value=getText('save.name')" "name='save'" "tabindex='7'")
        #tag (Submit "value=getText('previous.name')" "name='previous'" "tabindex='8'" "onclick='history.back();return false;'")
        #tag (Submit "value=getText('cancel.name')" "name='cancel'" "tabindex='9'")
    </fieldset>

 #end
</body>
</html>