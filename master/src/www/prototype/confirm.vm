#macro(showTask $cleanupTask $indent)
    <tr>
        <td class="content">
            $indent <a href="configuration.action?path=$cleanupTask.affectedPath">$!webwork.htmlEncode($cleanupTask.affectedPath)</a>
        </td>
        <td class="content">
            $cleanupTask.getSummary($textProvider)
        </td>
    </tr>
    #foreach($childTask in $cleanupTask.cascaded)
        #showTask($childTask "&nbsp;&nbsp;&nbsp;&nbsp;$indent")
    #end
#end

<html>
<body>

#set($config = $action.configuration)

<div>
    #set($breadcrumbPath = "")
    #set($sep = "")
    #foreach($pathElement in $config.parentPathElements)
        #if($breadcrumbPath.length() > 0)
            #set($breadcrumbPath = "${breadcrumbPath}/${pathElement}")
        #else
            #set($breadcrumbPath = "${pathElement}")
        #end
        ${sep} <a href="configuration.action?path=${breadcrumbPath}">${pathElement}</a>
        #set($sep = ">")
    #end
    ${sep} $!action.configuration.currentPath
</div>

<h2>#wwtext("name=confirm.delete")</h2>

<p>
    #wwtext("name=confirm.delete.blurb")
</p>

<form id="confirm.form" method="post" action="delete.action">
    <input type="hidden" name="path" value="$path"></input>
    <table class="form">
        <tr>
            <th class="content">#wwtext("name=affected.path")</th>
            <th class="content">#wwtext("name=action")</th>
        </tr>
        #showTask($task "")
        <tr>
            <td class="submit" colspan="2">
                <input type="submit" name="submitField" value="delete"></input>
                <input type="submit" name="submitField" value="cancel"></input>
            </td>
        </tr>
    </table>
</form>

</body>
</html>
