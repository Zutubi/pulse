<html>
<body>

#set($config = $action.configuration)

#parse("prototype/breadcrumbs.vm")

<h2>#i18n("key=label")</h2>
<div style="color:gray">
    #i18n("key=introduction")
</div>

#if( $config.simpleProperties.size() > 0)
    <!-- this configuration definition contains fields to be configured. -->
    <p>
        #pform("path=$config.path")
    </p>

    #if ($config.configurationCheckAvailable)
    <p>
        Test configuration
        #checkform("path=$config.path" "action=check.action?path=$config.path")
    </p>
    #end
#end

#if( $config.nestedProperties.size() > 0)
<p>&nbsp;</p>
<h4>nested configurations</h4>
<p>the following nested configurations are also available:</p>
<ul>
    #foreach($prop in $config.nestedProperties)
        <li>#i18n("path=$config.path/$prop" "key=label") <a href="#url("action=display" "path=${config.path}/${prop}")">(view - ${prop})</a>  </li>
    #end
</ul>
#end

</body>
</html>