<div class="config-panel">
    <h3 class="config-header">#i18n("key=${actionName}.label" "context=$configurationType.symbolicName")</h3>
    <div class="config-container">
        #actionform("path=$path" "formName=actionform" "namespace=aconfig")
    </div>
    <script type="text/javascript">
        actionform.on('actioncomplete', function(form, action)
        {
            handleConfigurationResponse(action.result);
        });
    </script>
</div>
