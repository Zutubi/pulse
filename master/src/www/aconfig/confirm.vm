#macro(showTask $cleanupTask $indent)
    <tr>
        <td class="content">
            ${indent}$!webwork.htmlEncode($cleanupTask.affectedPath)
        </td>
        <td class="content">
            $action.getMessage($cleanupTask, "summary")
        </td>
    </tr>
    #foreach($childTask in $cleanupTask.cascaded)
        #if(!$childTask.internal)
            #showTask($childTask "&nbsp;&nbsp;&nbsp;&nbsp;$indent")
        #end
    #end
#end

<h2 id='#id("delete:$path")'>#wwtext("name=confirm.delete")</h2>
<p>
    #wwtext("name=confirm.delete.blurb")
</p>

<table class="form">
    <tr>
        <th class="content">#wwtext("name=affected.path")</th>
        <th class="content">#wwtext("name=action")</th>
    </tr>
    #showTask($task "")
    <tr>
        <td class="submit" colspan="2">
            <a href="#" id="confirm.delete" onclick="runAjaxRequest('$base/aconfig/$path?delete=delete'); return false;"/>delete</a>
            <a href="#" id="cancel.delete" onclick="selectPath('$parentPath'); return false;"/>cancel</a>
        </td>
    </tr>
</table>

</body>
</html>
