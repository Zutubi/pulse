#helpTag("Server+Messages+Tab")
#authorisationTags($principle)
<content tag="selectedTab">server</content>
<html>
<head>
    <title>#wwtext("name=server")</title>
</head>
<body>
    #serverTabs("server-messages")

    <table class="fill-content">
        <tr><th colspan="5">$action.getText("messages.count", ["$pagingSupport.totalItems"])</td></tr>
        #pagingRow("serverMessages.action?" $pagingSupport)
    </table>

#foreach($record in $records)
    #serverMessage($record)
#end

#if($records.size() > 0)
    <table class="fill-content">
        #pagingRow("serverMessages.action?" $pagingSupport)
        <tr><th colspan="5">$action.getText("messages.count", ["$pagingSupport.totalItems"])</td></tr>
    </table>
#end

    #tabEnd()
</html>
