#helpTag("Agent+Messages+Tab")
#authorisationTags($principle)
#agentTags()
<html>
<head>
    <title>#wwtext("name=agents")</title>
</head>
<body>
    #agentTabs("messages")

#if($action.hasErrors())
    #parse("/agent-error.vm")
#else
    <table class="fill-content">
        <tr><th colspan="5">$action.getText("messages.count", ["$pagingSupport.totalItems"])</td></tr>
        #pagingRow("$urls.agentMessages($agent)" "" $pagingSupport)
    </table>

#foreach($record in $records)
    #serverMessage($record)
#end

#if($records.size() > 0)
    <table class="fill-content">
        #pagingRow("$urls.agentMessages($agent)" "" $pagingSupport)
        <tr><th colspan="5">$action.getText("messages.count", ["$pagingSupport.totalItems"])</td></tr>
    </table>
#end

#end

</html>
