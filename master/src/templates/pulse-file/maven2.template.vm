<?xml version="1.0"?>
<project defaultRecipe="default">

    <recipe name="default">
        <command name="build">
            <!-- pull in the maven2 resource if configured. -->
            <resource name="maven2" required="false"/>
            <maven2
#if($workingDir)
                working-dir="${base.dir}/$workingDir"
#end
#if($goals)
                goals="$goals"
#end
#if($arguments)
                args="$arguments"
#end
            />
        </command>
    </recipe>
</project>
