<?xml version="1.0"?>
<project defaultRecipe="ant build">

    #parse("pulse-file/prologue.vm")

    <recipe name="ant build">
        <command name="build">
            <!-- pull in the ant resource if configured. -->
            <resource name="ant" required="false"/>
            <ant
#if($buildFile)
                    build-file="$buildFile"
#end
#if($targets)
                    targets="$targets"
#end
#if($arguments)
                    args="$arguments"
#end
#if($workingDir)
                    working-dir="${base.dir}/$workingDir"
#end
                    >
#foreach($key in $environment.keySet())
                <environment name="$key" value="$environment.get($key)"/>
#end
                #parse("pulse-file/output.processors.vm")
            </ant>

            #parse("pulse-file/artifacts.vm")

        </command>
    </recipe>
</project>
