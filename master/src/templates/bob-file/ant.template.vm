<?xml version="1.0"?>
<project defaultRecipe="ant build">
    <recipe name="ant build">
        <executable exe="${ant.bin}">
#if($buildFile)
            <arg>-f</arg>
            <arg>$buildFile</arg>
#end
#foreach($target in $targets)
            <arg>$target</arg>
#end
#foreach($key in $environment.keySet())
            <environment name="$key" value="$environment.get($key)"/>
#end
        </executable>
    </recipe>
</project>
