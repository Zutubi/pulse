<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.core.model.Feature" table="FEATURE" lazy="false">

        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>
        
        <discriminator column="FEATURE_TYPE" type="string" length="63"/>
                
        <property name="levelName" column="LEVEL" type="string" length="63"/>
        
        <property name="summary" column="SUMMARY" type="string" length="4095"/>
        
        <subclass name="com.zutubi.pulse.core.model.PlainFeature" discriminator-value="PLAIN">
            <property name="firstLine" column="FIRST_LINE" type="long"/>

            <property name="lastLine" column="LAST_LINE" type="long"/>

            <property name="lineNumber" column="LINE" type="long"/>
        </subclass>
        
    </class>

</hibernate-mapping>
