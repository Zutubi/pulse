<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="mappingResources">
            <list>
                <value>com/cinnamonbob/model/persistence/hibernate/BuildResult.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/BuildSpecification.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/Changelist.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/CommandResult.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/Feature.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/Project.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/Revision.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/Scm.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/Slave.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/StoredArtifact.hbm.xml</value>
                <value>com/cinnamonbob/model/persistence/hibernate/User.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.jdbc.batch_size">0</prop>
                <prop key="hibernate.jdbc.use_scrollable_resultsets">false</prop>
            </props>
        </property>
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref bean="sessionFactory"/>
        </property>
    </bean>

    <bean id="anyTypeDaoTarget" class="com.cinnamonbob.model.persistence.hibernate.HibernateAnyTypeDao">
        <property name="sessionFactory">
            <ref bean="sessionFactory"/>
        </property>
    </bean>

    <bean id="anyTypeDao" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <ref bean="anyTypeDaoTarget"/>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

</beans>
