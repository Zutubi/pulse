<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.core.model.Changelist" table="CHANGELIST" lazy="false">

        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="serverUid" column="SERVER_UID" type="string" length="255"/>

        <!-- the local side of a one-one...  -->
        <many-to-one name="revision" class="com.zutubi.pulse.core.model.Revision" column="REVISION_ID" cascade="all" unique="true"/>

        <list name="changes" cascade="all,delete-orphan" lazy="true">
            <key column="CHANGELIST_ID"/>
            <index column="ORDINAL"/>
            <one-to-many class="com.zutubi.pulse.core.model.Change"/>
        </list>

        <bag name="projectIds" table="CHANGELIST_PROJECTS" lazy="false">
            <key column="CHANGELIST_ID"/>
            <element type="long" column="PROJECT_ID" not-null="true"/>
        </bag>

        <bag name="resultIds" table="CHANGELIST_RESULTS" lazy="false">
            <key column="CHANGELIST_ID"/>
            <element type="long" column="RESULT_ID" not-null="true"/>
        </bag>
    </class>

    <class name="com.zutubi.pulse.core.model.Change" table="FILE_CHANGE" lazy="false">
        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="actionName" column="ACTION" type="string" length="255"/>

        <property name="filename" column="FILENAME" type="string" length="4095"/>

        <many-to-one name="revision" class="com.zutubi.pulse.core.model.FileRevision" column="REVISION_ID" cascade="all" lazy="false"/>
    </class>

    <class name="com.zutubi.pulse.core.model.FileRevision" table="FILE_REVISION" lazy="false">
        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="TYPE" type="string" length="15"/>

        <subclass name="com.zutubi.pulse.core.model.CvsFileRevision" discriminator-value="CVS">
            <property name="revision" type="string"/>
        </subclass>

        <subclass name="com.zutubi.pulse.core.model.NumericalFileRevision" discriminator-value="NUMERICAL">
            <property name="number" type="long"/>
        </subclass>
    </class>
</hibernate-mapping>
