<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.zutubi.pulse.model.Group" table="GROUPS" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" column="NAME" type="string" not-null="false" length="255"/>

        <property name="adminAllProjects" column="ADMIN_ALL_PROJECTS" type="boolean"/>

        <idbag name="additionalAuthorities" table="GROUP_AUTHORITIES" cascade="all,delete-orphan" lazy="false">
            <collection-id column="ID" type="long">
                <generator class="hilo"/>
            </collection-id>
            <key column="GROUP_ID"/>
            <element type="string" column="AUTHORITY" not-null="true"/>
        </idbag>

        <set name="users" table="GROUP_USERS" lazy="false" cascade="save-update">
            <key column="GROUP_ID"/>
            <many-to-many class="com.zutubi.pulse.model.User" column="USER_ID"/>
        </set>
    </class>

    <query name="findGroupByName"><![CDATA[
        from Group g
        where g.name = :name
    ]]></query>

    <query name="findGroupByAdminAllProjects"><![CDATA[
        from Group g
        where g.adminAllProjects = true
    ]]></query>

    <query name="findGroupByMember"><![CDATA[
        from Group g
        where :member in elements(g.users)
    ]]></query>

</hibernate-mapping>
