<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message>name is required.</message>
        </field-validator>
    </field>
    <field name="spec">
        <field-validator type="requiredstring">
            <message>build specification is required.</message>
        </field-validator>
    </field>
    <field name="cron">
        <field-validator type="cronexpression">
            <message>please specify a valid cron expression.</message>
        </field-validator>
    </field>
</validators>