<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.cinnamonbob.model.Scm" table="SCM" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="SCMTYPE" type="string" length="255"/>

        <property name="path" column="PATH" type="string" length="1023"/>

        <property name="properties" column="PROPERTIES" type="com.cinnamonbob.util.PropertiesType" length="4096"/>

        <subclass name="com.cinnamonbob.model.P4" discriminator-value="P4" dynamic-update="false">
        </subclass>

        <subclass name="com.cinnamonbob.model.Svn" discriminator-value="SVN" dynamic-update="false">
        </subclass>

        <subclass name="com.cinnamonbob.model.Cvs" discriminator-value="CVS" dynamic-update="false">
        </subclass>

    </class>

</hibernate-mapping>
