<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.cinnamonbob.model.BuildResult" table="BUILD_RESULT" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="stamps" type="com.cinnamonbob.util.TimeStampsType">
            <column name="START" sql-type="BIGINT"/>
            <column name="FINISH" sql-type="BIGINT"/>
        </property>

        <property name="stateName" column="STATE" type="string" length="127"/>

        <property name="outputDir" type="string" length="1023"/>

        <property name="errorMessage" type="string" length="1023"/>

        <property name="failureMessage" type="string" length="1023"/>

        <property name="number" column="NUMBER" type="long" not-null="true"/>

        <many-to-one name="project" column="PROJECT" class="com.cinnamonbob.model.Project" cascade="none"/>

        <many-to-one name="buildSpecification" column="BUILD_SPEC" class="com.cinnamonbob.model.BuildSpecification" cascade="none"/>

        <many-to-one name="scmDetails" class="com.cinnamonbob.model.BuildScmDetails" column="SCM_DETAILS"
                     cascade="all" lazy="false"/>

        <many-to-one name="root" class="com.cinnamonbob.model.RecipeResultNode" column="RECIPE_RESULT_ID"
                     cascade="all"/>

    </class>

    <class name="com.cinnamonbob.model.BuildScmDetails" table="BUILD_SCM_DETAILS" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <many-to-one name="revision" class="com.cinnamonbob.core.model.Revision" column="REVISION_ID" cascade="all"
                     unique="true"/>

        <list name="changelists" cascade="all-delete-orphan" lazy="false">
            <key column="BUILD_SCM_DETAILS_ID"/>
            <index column="ORDINAL"/>
            <one-to-many class="com.cinnamonbob.core.model.Changelist"/>
        </list>

    </class>

    <class name="com.cinnamonbob.model.RecipeResultNode" table="RECIPE_RESULT_NODE" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="host" type="string" length="255"/>

        <many-to-one name="result" class="com.cinnamonbob.core.model.RecipeResult" column="RECIPE_RESULT_ID"
                     cascade="all" unique="true"/>

        <list name="children" cascade="all-delete-orphan" lazy="false">
            <key column="PARENT_ID"/>
            <index column="ORDINAL"/>
            <one-to-many class="com.cinnamonbob.model.RecipeResultNode"/>
        </list>

    </class>

    <class name="com.cinnamonbob.core.model.RecipeResult" table="RECIPE_RESULT" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="stamps" type="com.cinnamonbob.util.TimeStampsType">
            <column name="START" sql-type="BIGINT"/>
            <column name="FINISH" sql-type="BIGINT"/>
        </property>

        <property name="stateName" column="STATE" type="string" length="127"/>

        <property name="outputDir" type="string" length="1023"/>

        <property name="errorMessage" type="string" length="1023"/>

        <property name="failureMessage" type="string" length="1023"/>

        <property name="recipeName" column="RECIPE_NAME" type="string" length="255"/>

        <list name="commandResults" cascade="all-delete-orphan" lazy="false">
            <key column="BUILD_RESULT_ID"/>
            <index column="ORDINAL"/>
            <one-to-many class="com.cinnamonbob.core.model.CommandResult"/>
        </list>

    </class>

</hibernate-mapping>