<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.cinnamonbob.core.model.StoredArtifact" table="ARTIFACT" lazy="false">

        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" column="NAME" type="string" length="255"/>

        <property name="index" column="INDEX" type="string" length="255"/>

        <bag name="children" cascade="all-delete-orphan" lazy="false">
            <key column="ARTIFACT_ID" not-null="true"/>
            <one-to-many class="com.cinnamonbob.core.model.StoredFileArtifact"/>
        </bag>

    </class>

    <class name="com.cinnamonbob.core.model.StoredFileArtifact" table="FILE_ARTIFACT" lazy="false">

        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="path" column="FILE" type="string" length="1023"/>

        <property name="type" column="TYPE" type="string" length="255"/>

        <bag name="features" cascade="all-delete-orphan" lazy="false">
            <key column="FILE_ARTIFACT_ID"/>
            <one-to-many class="com.cinnamonbob.core.model.Feature"/>
        </bag>

        <bag name="tests" cascade="all-delete-orphan" lazy="false">
            <key column="FILE_ARTIFACT_ID"/>
            <one-to-many class="com.cinnamonbob.core.model.TestResult"/>
        </bag>
    </class>

    <class name="com.cinnamonbob.core.model.TestResult" table="TEST_RESULT" lazy="false">
        <id name="id" type="long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="TYPE" type="string"/>

        <property name="name" column="NAME" type="string"/>

        <property name="duration" column="DURATION" type="long"/>

        <subclass name="com.cinnamonbob.core.model.TestCaseResult" discriminator-value="CASE" dynamic-update="false">
            <property name="statusName" type="string"/>

            <property name="message" type="string"/>
        </subclass>

        <subclass name="com.cinnamonbob.core.model.TestSuiteResult" discriminator-value="SUITE" dynamic-update="false">
            <bag name="children" cascade="all-delete-orphan" lazy="false">
                <key column="SUITE_ID"/>
                <one-to-many class="com.cinnamonbob.core.model.TestResult"/>
            </bag>
        </subclass>

    </class>
</hibernate-mapping>
