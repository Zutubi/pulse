<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="initContext" class="com.cinnamonbob.bootstrap.SpringContextInitialisation">
        <property name="initBeans">
            <list>
                <ref bean="jettyManager"/>
            </list>
        </property>
    </bean>

    <bean id="velocityEngine" class="com.cinnamonbob.bootstrap.velocity.VelocityEngineFactoryBean"/>

    <bean id="quartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="configLocation">
            <value>classpath:com/cinnamonbob/bootstrap/quartz/quartz.properties</value>
        </property>
    </bean>

    <bean id="quartzJobFactory" class="com.cinnamonbob.bootstrap.quartz.SpringJobFactory" init-method="initJobFactory">
        <property name="scheduler">
            <ref bean="quartzScheduler"/>
        </property>
    </bean>

    <bean id="jettyServer" class="com.cinnamonbob.jetty.JettyServerFactoryBean" destroy-method="shutdown">
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="jettyManager" class="com.cinnamonbob.jetty.JettyManager" init-method="deployWebapp">
        <property name="jettyServer">
            <ref bean="jettyServer"/>
        </property>
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="buildManager" class="com.cinnamonbob.model.DefaultBuildManager" autowire="byName"/>

    <bean id="userManager" class="com.cinnamonbob.model.DefaultUserManager" autowire="byName"/>
    
    <bean id="projectManager" class="com.cinnamonbob.model.DefaultProjectManager" autowire="byName"/>

    <bean id="scheduleManager" class="com.cinnamonbob.schedule.DefaultScheduleManager" autowire="byName" init-method="init"/>

    <bean id="subscriptionManager" class="com.cinnamonbob.model.DefaultSubscriptionManager" autowire="byName"/>

    <bean id="scmManager" class="com.cinnamonbob.model.DefaultScmManager" autowire="byName"/>

    <bean id="eventManager" class="com.cinnamonbob.core.event.DefaultEventManager" autowire="byName"/>

    <bean id="objectFactory" class="com.cinnamonbob.spring.SpringObjectFactory" autowire="byName"/>

    <bean id="fileLoader" class="com.cinnamonbob.core.FileLoader" autowire="byName" singleton="false"/>

    <bean id="resourceRepository" class="com.cinnamonbob.core.ResourceRepository" autowire="byName"/>

    <bean id="buildProcessor" class="com.cinnamonbob.core.BuildProcessor" autowire="byName"/>

    <bean id="serverBuildProcessor" class="com.cinnamonbob.ServerBuildProcessor" autowire="byName"/>

    <bean id="buildQueue" class="com.cinnamonbob.BuildQueue" autowire="byName"/>

    <bean id="buildResultRenderer" class="com.cinnamonbob.core.renderer.VelocityBuildResultRenderer" autowire="byName"/>

    <bean id="userConfigRoot" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
        <property name="targetBeanName"><value>configurationManager</value></property>
        <property name="propertyPath"><value>applicationPaths.userConfigRoot</value></property>
    </bean>
</beans>
