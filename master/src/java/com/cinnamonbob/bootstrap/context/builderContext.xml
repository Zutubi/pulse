<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="velocityEngine" class="com.zutubi.pulse.bootstrap.velocity.VelocityEngineFactoryBean"/>

    <bean id="buildManagerTarget" class="com.zutubi.pulse.model.DefaultBuildManager" autowire="byName"
          init-method="init"/>

    <bean id="buildManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <ref bean="buildManagerTarget"/>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>


    <bean id="projectManagerTarget" class="com.zutubi.pulse.model.DefaultProjectManager" autowire="byName"
          init-method="initialise"/>
    <bean id="projectManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <ref bean="projectManagerTarget"/>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="subscriptionManagerTarget" class="com.zutubi.pulse.model.DefaultSubscriptionManager" autowire="byName"/>
    <bean id="subscriptionManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <ref bean="subscriptionManagerTarget"/>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="scmManagerTarget" class="com.zutubi.pulse.model.DefaultScmManager" autowire="byName" init-method="init"/>
    <bean id="scmManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <ref bean="scmManagerTarget"/>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>


    <bean id="fileResourceRepository" class="com.zutubi.pulse.core.FileResourceRepository" autowire="byName"
          init-method="initialise"/>

    <bean id="resourceRepository" class="com.zutubi.pulse.model.DatabaseResourceRepository" autowire="byName">
        <property name="parent">
            <ref bean="fileResourceRepository"/>
        </property>
    </bean>

    <bean id="recipeProcessor" class="com.zutubi.pulse.core.RecipeProcessor" autowire="byName" init-method="init"/>

    <bean id="masterRecipeProcessor" class="com.zutubi.pulse.MasterRecipeProcessor" autowire="byName"/>

    <bean id="freemarkerConfiguration" class="com.zutubi.pulse.bootstrap.freemarker.FreemarkerConfigurationFactoryBean"
          autowire="byName"/>

    <bean id="buildResultRenderer" class="com.zutubi.pulse.renderer.FreemarkerBuildResultRenderer" autowire="byName"/>

    <bean id="userConfigRoot" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
        <property name="targetBeanName">
            <value>configurationManager</value>
        </property>
        <property name="propertyPath">
            <value>userPaths.userConfigRoot</value>
        </property>
    </bean>

    <bean id="slaveProxyFactory" class="com.zutubi.pulse.SlaveProxyFactory" autowire="byName"/>

    <bean id="fatController" class="com.zutubi.pulse.FatController" autowire="byName" init-method="init"/>

    <bean id="recipeQueue" class="com.zutubi.pulse.ThreadedRecipeQueue" autowire="byName" init-method="init"/>

    <bean id="resultNotifier" class="com.zutubi.pulse.ResultNotifier" autowire="byName"/>

    <bean id="shutdownManager" class="com.zutubi.pulse.ShutdownManager">
        <property name="stoppables">
            <list>
                <ref bean="scheduler"/>
                <ref bean="fatController"/>
                <ref bean="recipeQueue"/>
                <ref bean="masterRecipeProcessor"/>
                <ref bean="jettyManager"/>
                <ref bean="databaseBootstrap"/>
            </list>
        </property>
    </bean>

    <bean id="tokenManager" class="com.zutubi.pulse.api.TokenManager" autowire="byName" init-method="init"/>

    <bean id="serverMessagesHandler" class="com.zutubi.pulse.logging.ServerMessagesHandler" init-method="init"/>

    <bean id="notifyConditionFactory" class="com.zutubi.pulse.model.NotifyConditionFactory">
        <property name="objectFactory">
            <ref bean="objectFactory"/>
        </property>
    </bean>

</beans>
