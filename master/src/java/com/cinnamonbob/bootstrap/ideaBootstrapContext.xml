<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="startupManager" class="com.cinnamonbob.bootstrap.DefaultStartupManager">
        <property name="coreContexts">
            <list>
                <!--<value>com/cinnamonbob/bootstrap/context/loggingContext.xml</value>-->
                <value>com/cinnamonbob/bootstrap/context/webserverContext.xml</value>
            </list>
        </property>
        <property name="appContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/mainSubsystemContext.xml</value>
            </list>
        </property>
        <property name="configContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/configSubsystemContext.xml</value>
            </list>
        </property>
        <property name="configurationManager">
            <ref local="configurationManager"/>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.SimpleConfigurationManager">
        <property name="systemPaths">
            <bean class="com.cinnamonbob.bootstrap.ConfigurableSystemPaths">
                <property name="systemRoot">
                    <value>master/system</value>
                </property>
                <property name="contentRoot">
                    <value>master/src/www</value>
                </property>
                <property name="configRoot">
                    <value>master/etc</value>
                </property>
                <property name="logRoot">
                    <value>master/system</value>
                </property>
                <property name="templateRoots">
                    <list>
                        <value type="java.io.File">server-core/src/www</value>
                        <value type="java.io.File">master/src/templates</value>
                        <value type="java.io.File">master/src/www</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="objectFactory" class="com.cinnamonbob.spring.SpringObjectFactory"/>

    <bean id="xworkObjectFactory" class="com.opensymphony.xwork.spring.SpringObjectFactory" init-method="initObjectFactory"/>
    
</beans>
