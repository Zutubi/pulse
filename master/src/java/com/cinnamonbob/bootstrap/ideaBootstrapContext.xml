<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="initContext" class="com.cinnamonbob.bootstrap.SpringContextInitialisation"></bean>

    <bean id="dataSource" class="com.cinnamonbob.bootstrap.DataSourceBeanFactory" destroy-method="close"/>

    <bean id="startupManager" class="com.cinnamonbob.bootstrap.StartupManager">
        <property name="systemContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/databaseBootstrapContext.xml</value>
                <value>com/cinnamonbob/bootstrap/databaseContext.xml</value>
                <value>com/cinnamonbob/bootstrap/applicationContext.xml</value>
                <value>com/cinnamonbob/bootstrap/webserverContext.xml</value>
                <value>com/cinnamonbob/bootstrap/webworkContext.xml</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.DefaultConfigurationManager" init-method="init">
        <property name="defaultProperties">
            <props>
                <prop key="name">value</prop>
            </props>
        </property>
        <property name="applicationPaths">
            <bean class="com.cinnamonbob.bootstrap.ConfigurableApplicationPaths">
                <property name="systemRoot">
                    <value>master/system</value>
                </property>
                <property name="contentRoot">
                    <value>master/src/www</value>
                </property>
                <property name="configRoot">
                    <value>master/etc</value>
                </property>
                <property name="templateRoot">
                    <value>master/src/templates</value>
                </property>
                <property name="userConfigRoot">
                    <value>master/etc</value>
                </property>
                <property name="databaseRoot">
                    <value>master/system/database</value>
                </property>
            </bean>
        </property>
    </bean>

</beans>
