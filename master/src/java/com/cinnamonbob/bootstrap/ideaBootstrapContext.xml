<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="startupManager" class="com.cinnamonbob.bootstrap.DefaultStartupManager">
        <property name="setupContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/coreSubsystemContext.xml</value>
                <value>com/cinnamonbob/bootstrap/webserverContext.xml</value>
                <value>com/cinnamonbob/bootstrap/setupContext.xml</value>
            </list>
        </property>
        <property name="systemContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/securitySubsystemContext.xml</value>
                <value>com/cinnamonbob/bootstrap/databaseBootstrapContext.xml</value>
                <value>com/cinnamonbob/bootstrap/coreDatabaseContext.xml</value>
                <value>com/cinnamonbob/bootstrap/databaseContext.xml</value>
                <value>com/cinnamonbob/bootstrap/schedulingSubsystemContext.xml</value>
                <value>com/cinnamonbob/bootstrap/applicationContext.xml</value>
            </list>
        </property>
        <property name="startupRunnables">
            <list>
                <value>com.cinnamonbob.BuildAborter</value>
                <value>com.cinnamonbob.ResourceDiscoverer</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.SimpleConfigurationManager">
        <property name="systemPaths">
            <bean class="com.cinnamonbob.bootstrap.ConfigurableSystemPaths">
                <property name="systemRoot">
                    <value>master/system</value>
                </property>
                <property name="contentRoot">
                    <value>master/src/www</value>
                </property>
                <property name="configRoot">
                    <value>master/etc</value>
                </property>
                <property name="templateRoots">
                    <list>
                        <value type="java.io.File">server-core/src/www</value>
                        <value type="java.io.File">master/src/templates</value>
                        <value type="java.io.File">master/src/www</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

</beans>
