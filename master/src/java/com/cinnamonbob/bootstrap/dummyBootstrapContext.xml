<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="dataSource" class="com.cinnamonbob.bootstrap.DataSourceBeanFactory" destroy-method="close"/>

    <bean id="startupManager" class="com.cinnamonbob.bootstrap.BootstrapStartupManager">
        <property name="baseContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/baseContext.xml</value>
            </list>
        </property>
        <property name="systemContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/setupSystemContext.xml</value>
                <value>com/cinnamonbob/bootstrap/applicationSystemContext.xml</value>
            </list>
        </property>
        <property name="startupRunnables">
            <list>
                <value>com.cinnamonbob.test.SetupDummyBuilds</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.DefaultConfigurationManager" init-method="init">
        <property name="applicationPaths">
            <bean class="com.cinnamonbob.bootstrap.ConfigurableApplicationPaths">
                <property name="systemRoot">
                    <value>master/system</value>
                </property>
                <property name="contentRoot">
                    <value>master/src/www</value>
                </property>
                <property name="configRoot">
                    <value>master/etc</value>
                </property>
                <property name="templateRoots">
                    <list>
                        <value type="java.io.File">server-core/src/www</value>
                        <value type="java.io.File">master/src/templates</value>
                        <value type="java.io.File">master/src/www</value>
                    </list>
                </property>
                <property name="userConfigRoot">
                    <value>master/etc</value>
                </property>
                <property name="databaseRoot">
                    <value>master/system/database</value>
                </property>
                <property name="projectRoot">
                    <value>master/system/projects</value>
                </property>
            </bean>
        </property>
    </bean>

</beans>
