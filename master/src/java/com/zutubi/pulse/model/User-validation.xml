<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message key="user.name.required">required field.</message>
        </field-validator>
    </field>
    <field name="login">
        <field-validator type="requiredstring">
            <message key="user.login.required">required field.</message>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message key="user.password.required">required field.</message>
        </field-validator>
    </field>
</validators>