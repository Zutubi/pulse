<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.model.PersistentResource" table="RESOURCE" lazy="false">
        <cache usage="read-write"/>
        
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <many-to-one name="slave" column="SLAVE_ID" class="com.zutubi.pulse.model.Slave" cascade="none" lazy="false"/>

        <property name="name" column="NAME" type="string" length="1023"/>

        <map name="properties" lazy="false" table="RESOURCE_VERSION_PROPERTIES">
            <key column="RESOURCE_VERSION_ID"/>
            <index type="string" column="PROPERTY_NAME" length="255"/>
            <composite-element class="com.zutubi.pulse.core.model.ResourceProperty">
                <property name="name" column="NAME" type="string" length="1023" not-null="true"/>
                <property name="value" column="VALUE" type="string" length="1023"/>
                <property name="addToEnvironment" column="ADD_TO_ENVIRONMENT" type="boolean"/>
                <property name="addToPath" column="ADD_TO_PATH" type="boolean"/>
                <property name="resolveVariables" column="RESOLVE_VARIABLES" type="boolean"/>
            </composite-element>
        </map>

        <property name="defaultVersion" column="DEFAULT_VERSION" type="string" length="1023"/>

        <map name="versions" lazy="false" table="RESOURCE_VERSIONS" cascade="all,delete-orphan">
            <cache usage="read-write"/>
            <key column="RESOURCE_ID"/>
            <index type="string" column="VERSION_VALUE" length="255"/>
            <one-to-many class="com.zutubi.pulse.core.model.ResourceVersion"/>
        </map>
    </class>

    <class name="com.zutubi.pulse.core.model.ResourceVersion" table="RESOURCE_VERSION" lazy="false">
        <cache usage="read-write"/>
        
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="value" column="VALUE" type="string" length="255"/>

        <map name="properties" lazy="false" table="RESOURCE_PROPERTIES" cascade="all">
            <key column="RESOURCE_VERSION_ID"/>
            <index type="string" column="PROPERTY_NAME"/>
            <composite-element class="com.zutubi.pulse.core.model.ResourceProperty">
                <property name="name" column="NAME" type="string" length="1023" not-null="true"/>
                <property name="value" column="VALUE" type="string" length="1023" not-null="true"/>
                <property name="addToEnvironment" column="ADD_TO_ENVIRONMENT" type="boolean"/>
                <property name="addToPath" column="ADD_TO_PATH" type="boolean"/>
                <property name="resolveVariables" column="RESOLVE_VARIABLES" type="boolean"/>
            </composite-element>
        </map>
    </class>

</hibernate-mapping>
