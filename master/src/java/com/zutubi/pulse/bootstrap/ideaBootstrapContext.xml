<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--

-->
<beans>

    <bean id="startupManager" class="com.zutubi.pulse.bootstrap.DefaultStartupManager" autowire="byName">
        <property name="coreContexts">
            <list>
                <value>com/zutubi/pulse/bootstrap/coreSubsystemContext.xml</value>
            </list>
        </property>
        <property name="startupRunnables">
            <list>
                <value>com.zutubi.pulse.BuildAborter</value>
            </list>
        </property>
        <property name="setupContexts">
            <list>
                <value>com/zutubi/pulse/bootstrap/configSubsystemContext.xml</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.zutubi.pulse.bootstrap.SimpleMasterConfigurationManager">
        <property name="systemPaths">
            <bean class="com.zutubi.pulse.bootstrap.ConfigurableSystemPaths">
                <property name="systemRoot">
                    <value>master/system</value>
                </property>
                <property name="contentRoot">
                    <value>master/src/www</value>
                </property>
                <property name="configRoot">
                    <value>master/etc</value>
                </property>
                <property name="logRoot">
                    <value>master/system/log</value>
                </property>
                <property name="tmpRoot">
                    <value>master/system/tmp</value>
                </property>
                <property name="templateRoots">
                    <list>
                        <value type="java.io.File">master/src/templates</value>
                        <value type="java.io.File">master/src/www</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="objectFactory" class="com.zutubi.pulse.spring.SpringObjectFactory"/>

    <!-- TODO: Do we still require this here? We dont really need it until the webapp is up... -->
    <bean id="xworkObjectFactory" class="com.opensymphony.xwork.spring.SpringObjectFactory" init-method="initObjectFactory"/>
    
</beans>
