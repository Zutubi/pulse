<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--

-->
<beans>

    <bean id="startupManager" class="com.zutubi.pulse.bootstrap.DefaultStartupManager" autowire="byName">
        <property name="startupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.FreemarkerLoggingStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.ProcessSetupStartupTask</value>
                <value>com.zutubi.pulse.BuildAborterStartupTask</value>
                <value>com.zutubi.pulse.NextBuildNumberAdjusterStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.DeployMainWebappStartupTask</value>
            </list>
        </property>
        <property name="postStartupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.InitialiseExtensionsStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.SystemStartedMessageStartupTask</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.zutubi.pulse.bootstrap.SimpleMasterConfigurationManager">
        <property name="systemPaths">
            <bean class="com.zutubi.pulse.bootstrap.ConfigurableSystemPaths">
                <property name="systemRootString">
                    <value>master/system</value>
                </property>
                <property name="contentRootString">
                    <value>master/src/www</value>
                </property>
                <property name="configRootString">
                    <value>master/etc</value>
                </property>
                <property name="logRootString">
                    <value>master/system/logs</value>
                </property>
                <property name="tmpRootString">
                    <value>master/system/tmp</value>
                </property>
                <property name="templateRootStrings">
                    <list>
                        <value>master/src/templates</value>
                        <value>master/src/www</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="pluginPaths" class="com.zutubi.pulse.plugins.ConfigurablePluginPaths">
        <property name="pluginConfigurationRootString" value="master/etc/osgi"/>
        <property name="internalPluginRootString" value="plugins/internal"/>
        <property name="prepackagedPluginRootString" value="plugins/prepackaged"/>
        <property name="userPluginRootString" value="user/plugins"/>
    </bean>

    <bean id="objectFactory" class="com.zutubi.pulse.spring.SpringObjectFactory"/>

    <!-- TODO: Do we still require this here? We dont really need it until the webapp is up... -->
    <bean id="xworkObjectFactory" class="com.opensymphony.xwork.spring.SpringObjectFactory" init-method="initObjectFactory"/>
    
</beans>
