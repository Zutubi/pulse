<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--

-->
<beans>

    <bean id="archiveManager" class="com.zutubi.pulse.restore.DefaultArchiveManager" autowire="byName">
        <property name="tmpDirectory">
            <bean id="configRoot" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
                <property name="targetBeanName">
                    <value>configurationManager</value>
                </property>
                <property name="propertyPath">
                    <value>systemPaths.tmpRoot</value>
                </property>
            </bean>
        </property>
    </bean>

</beans>
