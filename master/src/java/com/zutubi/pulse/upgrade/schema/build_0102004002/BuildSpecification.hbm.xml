<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.zutubi.pulse.model.BuildSpecification" table="BUILD_SPECIFICATION" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="prompt" type="boolean">
            <column name="PROMPT" default="false"/>
        </property>

        <bag name="properties" cascade="all,delete-orphan" lazy="false">
            <key column="SPECIFICATION_ID"/>
            <one-to-many class="com.zutubi.pulse.core.model.ResourceProperty"/>
        </bag>
    </class>

    <class name="com.zutubi.pulse.core.model.ResourceProperty" table="RESOURCE_PROPERTY">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" column="NAME" type="string" length="1023" not-null="true"/>
        <property name="value" column="VALUE" type="string" length="1023" not-null="true"/>
        <property name="addToEnvironment" column="ADD_TO_ENVIRONMENT" type="boolean"/>
        <property name="addToPath" column="ADD_TO_PATH" type="boolean"/>
        <property name="resolveVariables" column="RESOLVE_VARIABLES" type="boolean"/>
    </class>

    <class name="com.zutubi.pulse.core.model.ResourcePropertyB" table="RESOURCE_PROPERTIES">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>
        <property name="resolveVariables" column="RESOLVE_VARIABLES" type="boolean"/>
    </class>

</hibernate-mapping>
