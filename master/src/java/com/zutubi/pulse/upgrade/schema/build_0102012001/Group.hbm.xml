<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.model.Group" table="GROUPS" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <set name="users" table="GROUP_USERS" lazy="false" cascade="save-update">
            <key column="GROUP_ID"/>
            <many-to-many class="com.zutubi.pulse.model.User" column="USER_ID"/>
        </set>

    </class>

</hibernate-mapping>
