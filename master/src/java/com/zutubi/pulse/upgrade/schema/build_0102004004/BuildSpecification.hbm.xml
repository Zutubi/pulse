<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.zutubi.pulse.model.BuildSpecification" table="BUILD_SPECIFICATION" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <many-to-one name="pname" column="PNAME" class="com.zutubi.pulse.core.model.PersistentName" cascade="save-update" lazy="false"/>
    </class>

    <class name="com.zutubi.pulse.model.BuildSpecificationNode" table="BUILD_SPECIFICATION_NODE" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <component name="stage" class="com.zutubi.pulse.model.BuildStage">
            <many-to-one name="pname" column="PNAME" class="com.zutubi.pulse.core.model.PersistentName" cascade="save-update" lazy="false"/>
        </component>
    </class>

    <class name="com.zutubi.pulse.core.model.PersistentName" table="PERSISTENT_NAME">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" type="string" column="NAME"/>
    </class>
</hibernate-mapping>
