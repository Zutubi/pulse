<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.core.model.ResourcePropertyA" table="RESOURCE_VERSION_PROPERTIES" lazy="false">
        <id name="id" type="java.lang.Long" column="RESOURCE_VERSION_ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="resolveVariables" type="boolean">
            <column name="RESOLVE_VARIABLES" default="false"/>
        </property>

    </class>

    <class name="com.zutubi.pulse.core.model.ResourcePropertyB" table="RESOURCE_VERSION" lazy="false">
        <id name="id" type="java.lang.Long" column="RESOURCE_VERSION_ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="resolveVariables" type="boolean">
            <column name="RESOLVE_VARIABLES" default="false"/>
        </property>

    </class>

</hibernate-mapping>
