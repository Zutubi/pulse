<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="tailLines">
        <field-validator type="int">
            <param name="min">1</param>
            <message key="user.tail.lines.positive">max lines must be positive</message>
        </field-validator>
    </field>
    <field name="tailInterval">
        <field-validator type="int">
            <param name="min">1</param>
            <message key="user.tail.refresh.interval.positive">interval must be positive</message>
        </field-validator>
    </field>
</validators>