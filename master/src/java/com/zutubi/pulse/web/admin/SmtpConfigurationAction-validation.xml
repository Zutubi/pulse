<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="smtp.from">
        <field-validator type="requiredstring">
            <message key="smtp.from.required">from address is required</message>
        </field-validator>
        <field-validator type="email">
            <message key="smtp.from.invalid">invalid from email address</message>
        </field-validator>
    </field>
    <field name="smtp.host">
        <field-validator type="requiredstring">
            <message key="smtp.host.required">smtp host is required</message>
        </field-validator>
    </field>
</validators>