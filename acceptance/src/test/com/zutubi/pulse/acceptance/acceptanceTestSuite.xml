            <class name="com.zutubi.pulse.acceptance.ServerSectionAcceptanceTest"></class>
            <class name="com.zutubi.pulse.acceptance.BuildAcceptanceTest"></class>
            <class name="com.zutubi.pulse.acceptance.BuildHookAcceptanceTest"></class>
            <class name="com.zutubi.pulse.acceptance.PersonalBuildAcceptanceTest"></class>
