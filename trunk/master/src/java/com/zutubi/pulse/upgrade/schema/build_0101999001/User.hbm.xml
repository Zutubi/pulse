<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.zutubi.pulse.model.User" table="USER" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="nextBuildNumber" type="long">
            <column name="NEXT_BUILD_NUMBER" default="1"/>
        </property>
    </class>

    <class name="com.zutubi.pulse.model.Subscription" table="SUBSCRIPTION" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="personal" type="boolean">
            <column name="PERSONAL" default="false"/>
        </property>
    </class>
</hibernate-mapping>