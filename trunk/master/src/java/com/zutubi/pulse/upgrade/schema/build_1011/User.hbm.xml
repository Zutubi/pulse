<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <!--
     NOTE: This is only a partial mapping, containing only those details that
           have changed between 1010 and 1020.
    -->
    <class name="com.zutubi.pulse.model.User" table="USER" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <!--
        A new properties table used to store arbitrary user properties.
        -->
        <map name="properties" table="USER_PROPS">
            <key column="USER_ID"/>
            <index column="KEY" type="string" length="1000"/>
            <element column="VALUE" type="string" length="4000"/>
        </map>

    </class>

</hibernate-mapping>