<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="jabber.host">
        <field-validator type="requiredstring">
            <message key="jabber.host.required">required field</message>
        </field-validator>
    </field>
    <field name="jabber.port">
        <field-validator type="required">
            <message key="jabber.port.required">required field</message>
        </field-validator>
        <field-validator type="int">
            <param name="min">1</param>
            <message key="jabber.port.positive">port must be a positive integer</message>
        </field-validator>
    </field>
    <field name="jabber.username">
        <field-validator type="requiredstring">
            <message key="jabber.username.required">required field</message>
        </field-validator>
    </field>
</validators>