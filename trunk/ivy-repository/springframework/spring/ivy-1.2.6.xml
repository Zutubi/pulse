    <publications>
        <artifact name="spring-aop" type="jar" conf="spring-aop"/>
        <artifact name="spring-beans" type="jar" conf="spring-beans"/>
        <artifact name="spring-context" type="jar" conf="spring-context"/>
        <artifact name="spring-core" type="jar" conf="spring-core"/>
        <artifact name="spring-dao" type="jar" conf="spring-jdbc,spring-hibernate,spring-hibernate3"/>
        <artifact name="spring-hibernate" type="jar" conf="spring-hibernate,spring-hibernate3"/>
        <artifact name="spring-jdbc" type="jar" conf="spring-jdbc"/>
        <artifact name="spring-mock" type="jar" conf="spring-mock"/>
        <artifact name="spring-orm" type="jar" conf="spring-orm"/>
        <artifact name="spring-remoting" type="jar" conf="spring-remoting"/>
        <artifact name="spring-web" type="jar" conf="spring-web"/>
        <artifact name="spring-support" type="jar" conf="spring-support"/>
        <artifact name="spring-license" type="txt" conf="spring-core"/>
    </publications>

    <dependencies>
        <dependency org="apache" name="axis" rev="1.2.1" conf="spring-remoting->default"/>
        <dependency org="cglib" name="cglib" rev="2.1.3" conf="spring-aop->default"/>
        <dependency org="hibernate" name="hibernate" rev="2.1.8" conf="spring-hibernate->default"/>
        <dependency org="hibernate" name="hibernate" rev="3.0.5" conf="spring-hibernate3->default"/>
        <dependency org="sun" name="jaxrpc" rev="1.1" conf="spring-remoting->default"/>
        <dependency org="apache" name="commons-attributes" rev="2.1" conf="spring-aop->default"/>
        <dependency org="apache" name="commons-logging" rev="1.0.4" conf="*"/>
        <dependency org="caucho" name="hessian" rev="3.0.13" conf="spring-remoting->default"/>
        <dependency org="ehcache" name="ehcache" rev="1.1" conf="spring-support->default"/>
    </dependencies>
