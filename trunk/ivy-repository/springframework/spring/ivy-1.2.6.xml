        <description homepage="http://www.springframework.org">
            Spring framework library.
        </description>
    </info>

    <configurations>
        <conf name="spring-core" description="Spring core services" visibility="public"/>
        <conf name="spring-beans" description="Spring Bean support" visibility="public" extends="spring-core"/>
        <conf name="spring-context" description="Spring AppContext support" visibility="public" extends="spring-beans"/>
        <conf name="spring-jdbc" description="Spring JDBC support" visibility="public" extends="spring-core"/>
        <conf name="spring-aop" description="Spring AOP support" visibility="public" extends="spring-core"/>
        <conf name="spring-orm" description="Spring o/r support" extends="spring-core"/>
        <conf name="spring-support" description="Spring JMX/mail/scheduling/caching support" extends="spring-beans"/>
        <conf name="spring-hibernate" description="Spring Hibernate2 support" extends="spring-orm"/>
        <conf name="spring-hibernate3" description="Spring Hibernate3 support" extends="spring-orm"/>
        <conf name="spring-mock" description="Spring mock testing support" extends="spring-context"/>
        <conf name="spring-remoting" description="Spring remoting support" extends="spring-core"/>
        <conf name="spring-web" description="Spring Web support" extends="spring-core"/>
