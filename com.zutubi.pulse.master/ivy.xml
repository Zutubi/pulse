<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">
    <info organisation="zutubi" module="com.zutubi.pulse.master" status="integration">
        <ivyauthor name="zutubi" url="http://www.zutubi.com/"/>
        <description homepage="http://www.zutubi.com/">
            The pulse master module is what is commonly thought of as Pulse. It includes
            the web application for the primary pulse server and everything specific to
            it.
        </description>
    </info>

    <configurations>
        <conf name="release" description="Defines those packages that are included in the final release."/>
        <conf name="external" description="All of those packages that are external to Pulse."/>
        <conf name="build" description="All of the packages required during the build."/>
        <conf name="internal-bundles" description="Internal bundles required by Pulse."/>
        <conf name="prepackaged-bundles" description="Prepackaged bundles required by Pulse."/>
        <conf name="src" description="The source packages included as part of the source release"/>
    </configurations>

    <publications>
        <artifact name="com.zutubi.pulse.master" type="jar" conf="release,build"/>
        <artifact name="com.zutubi.pulse.master-src" type="jar" conf="src"/>
    </publications>

    <dependencies>
        <dependency org="zutubi" name="com.zutubi.pulse.servercore" rev="latest.integration" conf="*->@"/>

        <dependency org="acegisecurity" name="acegisecurity" rev="1.0.0" conf="external,build,release->default"/>

        <dependency org="apache" name="commons-dbcp" rev="1.2.1" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-fileupload" rev="1.1.1" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-io" rev="1.1" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-pool" rev="1.2" conf="external,build,release->default"/>
        <dependency org="apache" name="velocity" rev="1.3.1" conf="external,build,release->default"/>

        <dependency org="displaytag" name="displaytag" rev="1.0" conf="external,build,release->default"/>

        <dependency org="ehcache" name="ehcache" rev="1.1" conf="external,build,release->default"/>

        <dependency org="hibernate" name="hibernate" rev="3.1.1" conf="external,build,release->default"/>

        <dependency org="hsqldb" name="hsqldb" rev="1.8.0.7" conf="external,build,release->default"/>

        <dependency org="jive" name="smack" rev="2.2.1" conf="external,build,release->default"/>

        <dependency org="opensymphony" name="quartz" rev="20060404" conf="external,build,release->default"/>
        <dependency org="opensymphony" name="sitemesh" rev="2.2.1" conf="external,build,release->default"/>
        <dependency org="opensymphony" name="webwork" rev="2.2.6" conf="external,build,release->default"/>

        <!-- we need the portlet api at the moment since the IBM JDK on the power pc does not include it. -->
        <dependency org="portlet-api" name="portlet-api" rev="1.0" conf="external,build,release->default"/>

        <dependency org="rife" name="jhighlight" rev="1.0" conf="external,build,release->default"/>

        <dependency org="springframework" name="spring" rev="2.0" conf="external,build,release->spring-aop,spring-jdbc,spring-hibernate3,spring-support"/>

        <dependency org="sun" name="rome" rev="0.8" conf="external,build,release->default"/>
        <dependency org="sun" name="rome-content" rev="20060508" conf="external,build,release->default"/>
        <dependency org="sun" name="transaction" rev="1.0.1b" conf="external,build,release->default"/>

        <dependency org="json" name="json" rev="1.0" conf="external,build,release->default"/>

        <dependency org="flexjson" name="flexjson" rev="1.6" conf="external,build,release->default"/>

        <dependency org="jwebunit" name="jwebunit" rev="1.2" conf="external,build->default"/>

        <dependency org="jfree" name="jfreechart" rev="1.0.0-rc1" conf="external,build,release->default"/>
    </dependencies>
</ivy-module>
