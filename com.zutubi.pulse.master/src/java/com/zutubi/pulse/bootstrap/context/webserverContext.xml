<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
The webserver subsystem context contains the jetty webserver configuration, and provides access to
managers used to interact with the web context.

This context exports:

    jettyManager: The manager for the webserver. This manager provides access to interacting with
                  the web context.
-->
<beans>

    <bean id="customSerialiserFactory" class="com.zutubi.pulse.servercore.hessian.CustomSerialiserFactory"/>

    <bean id="jettyManager" class="com.zutubi.pulse.servercore.jetty.JettyManager">
        <property name="jettyServer">
            <ref local="jettyServer"/>
        </property>
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="jettyServer" class="com.zutubi.pulse.servercore.jetty.JettyServerFactoryBean" destroy-method="shutdown">
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="webManager" class="com.zutubi.pulse.bootstrap.WebManager">
        <property name="jettyManager">
            <ref local="jettyManager"/>
        </property>
    </bean>

    <bean id="tokenManager" class="com.zutubi.pulse.bootstrap.StartupTokenManager">
        <property name="adminTokenManager">
            <ref local="adminTokenManager"/>
        </property>
    </bean>

    <!-- Token manager required for scripted access to the remote api. -->
    <bean id="adminTokenManager" class="com.zutubi.pulse.servercore.api.AdminTokenManager" autowire="byName" init-method="init">
        <property name="configRoot">
            <bean id="configRoot" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
                <property name="targetBeanName">
                    <value>configurationManager</value>
                </property>
                <property name="propertyPath">
                    <value>systemPaths.configRoot</value>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="xworkObjectFactory" class="com.opensymphony.xwork.spring.SpringObjectFactory" init-method="initObjectFactory"/>
    
</beans>
