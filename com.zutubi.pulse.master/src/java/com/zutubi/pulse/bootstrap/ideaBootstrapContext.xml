<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--

-->
<beans>

    <bean id="startupManager" class="com.zutubi.pulse.bootstrap.DefaultStartupManager" autowire="byName">
        <property name="startupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.tasks.LoginAsSystemStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.FreemarkerLoggingStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.CoreSystemStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.WebserverStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.ProcessSetupStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.BuildAborterStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.NextBuildNumberAdjusterStartupTask</value>
            </list>
        </property>
        <property name="postStartupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.tasks.DeployMainWebappStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.SystemStartedMessageStartupTask</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.zutubi.pulse.bootstrap.SimpleMasterConfigurationManager">
        <property name="systemPaths">
            <bean class="com.zutubi.pulse.bootstrap.ConfigurableSystemPaths">
                <property name="systemRootString">
                    <value>com.zutubi.pulse.master/system</value>
                </property>
                <property name="contentRootString">
                    <value>com.zutubi.pulse.master/src/www</value>
                </property>
                <property name="configRootString">
                    <value>com.zutubi.pulse.master/etc</value>
                </property>
                <property name="logRootString">
                    <value>com.zutubi.pulse.master/system/logs</value>
                </property>
                <property name="tmpRootString">
                    <value>com.zutubi.pulse.master/system/tmp</value>
                </property>
                <property name="templateRootStrings">
                    <list>
                        <value>com.zutubi.pulse.master/src/templates</value>
                        <value>com.zutubi.pulse.master/src/www</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="pluginPaths" class="com.zutubi.pulse.plugins.ConfigurablePluginPaths">
        <property name="internalPluginStorageString" value="plugins/internal"/>
        <property name="osgiConfigurationString" value="com.zutubi.pulse.master/etc/osgi"/>
        <property name="pluginRegistryString" value="plugins"/>
        <property name="pluginStorageString" value="plugins/prepackaged"/>
        <property name="pluginWorkString" value="plugins/work"/>
    </bean>

    <bean id="objectFactory" class="com.zutubi.pulse.core.spring.SpringObjectFactory"/>

    <!-- TODO: Do we still require this here? We dont really need it until the webapp is up... -->
    <bean id="xworkObjectFactory" class="com.opensymphony.xwork.spring.SpringObjectFactory" init-method="initObjectFactory"/>
    
    <bean id="threadFactory" class="com.zutubi.pulse.security.PulseThreadFactory"/>
</beans>
