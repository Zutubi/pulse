<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--

-->
<beans default-autowire="byName">

    <bean id="userPaths" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
        <property name="targetBeanName">
            <value>configurationManager</value>
        </property>
        <property name="propertyPath">
            <value>userPaths</value>
        </property>
    </bean>

    <bean id="archiveManager" class="com.zutubi.pulse.master.restore.DefaultRestoreManager">
        <property name="tmpDirectory">
            <bean id="tmpRoot" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
                <property name="targetBeanName">
                    <value>configurationManager</value>
                </property>
                <property name="propertyPath">
                    <value>systemPaths.tmpRoot</value>
                </property>
            </bean>
        </property>
        <property name="paths">
            <ref local="userPaths"/>
        </property>
        <property name="restorableComponents">
            <list>
                <ref local="recordsArchive"/>
                <ref local="databaseArchive"/>
                <ref local="dataDirectoryArchive"/>
                <ref local="artifactArchive"/>
            </list>
        </property>
    </bean>

    <bean id="backupManager" class="com.zutubi.pulse.master.restore.BackupManager" autowire="byName" init-method="init">
        <property name="backupDir">
            <bean class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
                <property name="targetBeanName">
                    <value>userPaths</value>
                </property>
                <property name="propertyPath">
                    <value>backupRoot</value>
                </property>
            </bean>
        </property>
        <property name="tmpDirectory">
            <bean class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
                <property name="targetBeanName">
                    <value>systemPaths</value>
                </property>
                <property name="propertyPath">
                    <value>tmpRoot</value>
                </property>
            </bean>
        </property>
        <property name="backupableComponents">
            <list>
                <ref local="recordsArchive"/>
                <ref local="dataDirectoryArchive"/>
            </list>
        </property>
    </bean>

    <bean id="recordsArchive" class="com.zutubi.pulse.master.restore.RecordsArchive"/>
    
    <bean id="databaseArchive" class="com.zutubi.pulse.master.restore.DatabaseArchive">
        <property name="mappings">
            <ref bean="hibernateMappings"/>
        </property>
    </bean>

    <bean id="dataDirectoryArchive" class="com.zutubi.pulse.master.restore.DataDirectoryArchive">
        <property name="userPaths">
            <ref local="userPaths"/>
        </property>
    </bean>

    <bean id="artifactArchive" class="com.zutubi.pulse.master.restore.ArtifactArchive">
        <property name="userPaths">
            <ref local="userPaths"/>
        </property>
        <property name="systemConfiguration">
            <bean class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
                <property name="targetBeanName">
                    <value>configurationManager</value>
                </property>
                <property name="propertyPath">
                    <value>systemConfig</value>
                </property>
            </bean>
        </property>
    </bean>

</beans>
