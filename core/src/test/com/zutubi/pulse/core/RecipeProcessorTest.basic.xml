<?xml version="1.0"?>
<project default-recipe="default">
    <recipe name="default">
        <print name="greeting" message="hello world"/>
    </recipe>

    <recipe name="version">
        <version value="test version"/>
    </recipe>

    <recipe name="failure">
        <failure name="born to fail"/>
    </recipe>

    <recipe name="exception">
        <exception name="predictable"/>
    </recipe>

    <recipe name="unexpected exception">
        <unexpected-exception name="oops"/>
    </recipe>

    <recipe name="nested force">
        <failure name="fail"/>
        <command name="should force">
            <print force="true" message="me for the win"/>
        </command>
    </recipe>
</project>
