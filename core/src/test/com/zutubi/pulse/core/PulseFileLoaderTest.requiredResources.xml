<?xml version="1.0"?>
<project default-recipe="default">
    <property name="foo" value="bar"/>

    <recipe name="default">
        <resource name="noversion"/>

        <property name="baz" value="quux"/>

        <resource name="withversion" version="1"/>

        <resource name="notrequired" required="false"/>

        <resource name="explicitlyrequired" required="true"/>
    </recipe>

    <recipe name="nested">
        <executable name="nested" exe="test">
            <resource name="nested"/>
        </executable>
    </recipe>

    <recipe name="unresolvables">
        <property name="hey" value="${ho}"/>
        
        <resource name="un"/>

        <command name="foo">
            <sleep name="snoozy"/>
            <artifact name="${foo}" file="jim"/>
        </command>
    </recipe>

    <recipe name="noname">
        <resource/>
    </recipe>
</project>
