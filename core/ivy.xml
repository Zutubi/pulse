<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">

    <info organisation="zutubi" module="pulse-core" status="integration">
        <ivyauthor name="zutubi" url="http://www.zutubi.com/"/>
        <description homepage="http://www.zutubi.com/">
            The pulse core module defines the core components that are common
            to every module within pulse.
        </description>
    </info>

    <configurations>
        <conf name="release" description="Defines those packages that are included in the final release."/>
        <conf name="external" description="All of those packages that are external to Pulse."/>
        <conf name="build" description="All of the packages required during the build."/>
    </configurations>

    <publications>
        <artifact name="core" type="jar" conf="release, build"/>
        <artifact name="core-test" type="jar" conf="build"/>
    </publications>

    <dependencies>

        <dependency org="zutubi" name="boot" rev="1.2" conf="external,build,release->default"/>

        <dependency org="apache" name="ant" rev="1.6.5" conf="external,build,release->directoryscanner"/>
        <dependency org="apache" name="commons-cli" rev="1.0" conf="external,build,release->default"/>
        <dependency org="apache" name="xmlrpc" rev="2.0.1" conf="external,build,release->default"/>

        <dependency org="javasvn" name="javasvn" rev="1.0.6" conf="external,build,release->default"/>

        <dependency org="jssh" name="jssh" rev="0.2.7" conf="external,build,release->default"/>

        <dependency org="junit" name="junit" rev="3.8.1" conf="external,build->default"/>

        <dependency org="netbeans" name="javacvs" rev="11nov2005" conf="external,build,release->default"/>

        <dependency org="opensymphony" name="xwork" rev="1.1.1" conf="external,build,release->minimal"/>
        <dependency org="opensymphony" name="oscore" rev="2.2.4" conf="external,build,release->default"/>

        <dependency org="sun" name="javamail" rev="1.3.2" conf="external,build,release->default"/>

        <dependency org="xom" name="xom" rev="20051027" conf="external,build,release->default"/>

        <dependency org="xstream" name="xstream" rev="1.2" conf="external,build,release->default"/>

    </dependencies>

</ivy-module>
