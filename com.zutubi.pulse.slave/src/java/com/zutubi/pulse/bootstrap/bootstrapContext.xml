<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="startupManager" class="com.zutubi.pulse.bootstrap.DefaultStartupManager" autowire="byName">
        <property name="startupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.tasks.SlaveContextStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.SlaveSystemPropertiesStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.SlaveJettyStartupTask</value>
            </list>
        </property>
        <property name="postStartupTasks">
            <list>
                <value>com.zutubi.pulse.bootstrap.tasks.InitialiseExtensionsStartupTask</value>
                <value>com.zutubi.pulse.bootstrap.tasks.SlaveStartedMessageStartupTask</value>
            </list>
        </property>
    </bean>

    <bean id="configurationManager" class="com.zutubi.pulse.slave.SlaveConfigurationManager" init-method="init"/>

    <bean id="pluginPaths" class="com.zutubi.pulse.bootstrap.ServerPluginPaths" autowire="byName">
        <property name="configurationManager">
            <ref local="configurationManager"/>
        </property>
    </bean>
    
    <bean id="objectFactory" class="com.zutubi.pulse.spring.SpringObjectFactory"/>

</beans>
