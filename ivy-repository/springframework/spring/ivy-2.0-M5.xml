        <artifact name="spring-web" type="jar" conf="spring-web"/>
    </publications>

    <dependencies>
        <dependency org="aopalliance" name="aopalliance" rev="1.0" conf="spring-aop->default"/>
        <dependency org="cglib" name="cglib" rev="2.1.3" conf="spring-aop->default"/>
        <dependency org="hibernate" name="hibernate" rev="3.1.1" conf="spring-hibernate3->default"/>
        <dependency org="apache" name="commons-attributes" rev="2.1" conf="spring-aop->default"/>
        <dependency org="apache" name="commons-logging" rev="1.0.4" conf="*"/>
        <dependency org="ehcache" name="ehcache" rev="1.1" conf="spring-support->default"/>
    </dependencies>
</ivy-module>
