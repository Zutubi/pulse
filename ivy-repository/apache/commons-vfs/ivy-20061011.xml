<ivy-module version="1.0">

    <info organisation="apache" module="commons-vfs" revision="20061011" status="release">

        <license name="..." url="..."/>

		<description homepage="http://jakarta.apache.org/commons/vfs/">
            Commons VFS provides a single API for accessing various different file systems. It presents a uniform view
            of the files from various different sources, such as the files on local disk, on an HTTP server, or inside
            a Zip archive.
		</description>
	</info>

    <configurations>
        <conf name="default" description="for minimal use"/>
        <conf name="full" extends="default" description="contains all supported providers"/>
    </configurations>

