<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">
    <info organisation="zutubi" module="com.zutubi.pulse.core" status="integration">
        <ivyauthor name="zutubi" url="http://www.zutubi.com/"/>
        <description homepage="http://www.zutubi.com/">
            The pulse core module defines the core components that are common
            to every module within pulse.
        </description>
    </info>

    <configurations>
        <conf name="release" description="Defines those packages that are included in the final release."/>
        <conf name="external" description="All of those packages that are external to Pulse."/>
        <conf name="build" description="All of the packages required during the build."/>
        <conf name="src" description="The source packages included as part of the source release"/>
    </configurations>

    <publications>
        <artifact name="com.zutubi.pulse.core" type="jar" conf="release, build"/>
        <artifact name="com.zutubi.pulse.core-src" type="jar" conf="src"/>
        <artifact name="com.zutubi.pulse.core-test" type="jar" conf="build"/>
    </publications>

    <dependencies>
        <!-- Project module dependencies -->
        <dependency org="zutubi" name="com.zutubi.tove" rev="latest.integration" conf="release,external,build,src->@"/>
        <dependency org="zutubi" name="com.zutubi.events" rev="latest.integration" conf="release,external,build,src->@"/>
        <dependency org="zutubi" name="com.zutubi.validation" rev="latest.integration" conf="release,external,build,src->@"/>
        <dependency org="zutubi" name="com.zutubi.config.annotations" rev="latest.integration" conf="release,external,build,src->@"/>

        <!-- Library dependencies -->
        <dependency org="zutubi" name="boot" rev="2.0" conf="external,build,release->default"/>

        <dependency org="apache" name="ant" rev="1.6.5" conf="external,build,release->directoryscanner"/>
        <dependency org="apache" name="commons-cli" rev="1.0" conf="external,build,release->default"/>
        <dependency org="apache" name="xmlrpc" rev="2.0.1" conf="external,build,release->default"/>

        <dependency org="jssh" name="jssh" rev="0.2.7" conf="external,build,release->default"/>

        <dependency org="junit" name="junit" rev="3.8.1" conf="external,build->default"/>

        <dependency org="opensymphony" name="xwork" rev="1.2.3" conf="external,build,release->minimal"/>

        <dependency org="mockito" name="mockito" rev="1.5" conf="external,build->default"/>

        <dependency org="sun" name="javamail" rev="1.3.2" conf="external,build,release->default"/>

        <dependency org="xom" name="xom" rev="20080314" conf="external,build,release->default"/>

        <dependency org="xstream" name="xstream" rev="1.2" conf="external,build,release->default"/>

        <dependency org="eclipse" name="equinox" rev="3.3" conf="external,build,release->default"/>
        <dependency org="eclipse" name="equinox-bundles" rev="3.3_1" conf="build->default">
            <artifact name="org.eclipse.equinox.common_3.3.0.v20070426" type="jar"/>
            <artifact name="org.eclipse.equinox.registry_3.3.0.v20070522" type="jar"/>
                <!--<artifact name="org.eclipse.core.jobs_3.3.0.v20070423" type="jar"/>-->
        </dependency>

        <dependency org="springframework" name="spring" rev="2.0" conf="external,build,release->spring-beans,spring-context,spring-core"/>
    </dependencies>
</ivy-module>

