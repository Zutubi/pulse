<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <!-- -->
    <class name="com.zutubi.pulse.model.User" table="LOCAL_USER" lazy="false">
        <cache usage="read-write"/>
        
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="login" column="LOGIN" type="string" length="255"/>

        <property name="name" column="NAME" type="string" not-null="false" length="255"/>

        <property name="password" column="PASSWORD" type="string" not-null="false" length="255"/>

        <property name="enabled" column="ENABLED" type="boolean"/>

        <property name="defaultAction" type="string" length="255"/>

        <property name="refreshInterval" type="int"/>

        <map name="properties" table="USER_PROPERTIES">
            <cache usage="read-write"/>
            <key column="USER_ID"/>
            <index column="PROPERTY_KEY" type="string" length="255"/>
            <element column="PROPERTY_VALUE" type="string" length="4095"/>
        </map>

        <idbag name="grantedAuthorities" table="USER_AUTHORITIES" cascade="all,delete-orphan" lazy="false">
            <cache usage="read-write"/>
            <collection-id column="ID" type="long">
                <generator class="hilo"/>
            </collection-id>
            <key column="USER_ID"/>
            <element type="string" column="AUTHORITY" not-null="true" length="255"/>
        </idbag>

        <set name="groups" table="GROUP_USERS" lazy="false" inverse="true" cascade="none">
            <cache usage="read-write"/>
            <key column="USER_ID"/>
            <many-to-many class="com.zutubi.pulse.model.Group" column="GROUP_ID"/>
        </set>
        
        <bag name="contactPoints" inverse="true" cascade="all" lazy="false">
            <cache usage="read-write"/>
            <key column="USER_ID"/>
            <one-to-many class="com.zutubi.pulse.model.ContactPoint"/>
        </bag>

        <bag name="aliases" lazy="false" table="USER_ALIASES">
            <cache usage="read-write"/>
            <key column="USER_ID"/>
            <element type="string" column="ALIAS" not-null="true" length="255"/>
        </bag>

        <set name="shownProjects" table="USER_SHOWN_PROJECTS" lazy="true" cascade="save-update">
            <cache usage="read-write"/>
            <key column="USER_ID"/>
            <many-to-many class="com.zutubi.pulse.model.Project" column="PROJECT_ID"/>
        </set>

        <set name="shownGroups" table="USER_SHOWN_GROUPS" lazy="true" cascade="save-update">
            <cache usage="read-write"/>
            <key column="USER_ID"/>
            <many-to-many class="com.zutubi.pulse.model.ProjectGroup" column="PROJECT_GROUP_ID"/>
        </set>

        <property name="nextBuildNumber" column="NEXT_BUILD_NUMBER" type="long"/>
    </class>

    <!-- Contact points. -->
    <class name="com.zutubi.pulse.model.ContactPoint" table="CONTACT_POINT" lazy="false">
        <cache usage="read-write"/>

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="TYPE" type="string" length="255"/>

        <property name="name" column="NAME" type="string" not-null="false" length="255"/>
        <property name="uid" column="UID" type="string" not-null="false" length="255"/>

        <property name="properties" column="PROPERTIES" type="com.zutubi.pulse.master.util.hibernate.PropertiesType" not-null="false" length="4095"/>

        <many-to-one name="user" column="USER_ID" class="com.zutubi.pulse.model.User" insert="true" lazy="false"/>

        <bag name="subscriptions" inverse="true" cascade="all,delete-orphan" lazy="false">
            <cache usage="read-write"/>
            <key column="CONTACT_ID"/>
            <one-to-many class="com.zutubi.pulse.model.Subscription"/>
        </bag>

        <property name="lastError" column="LAST_ERROR" type="string" not-null="false" length="4095"/>
        
        <subclass name="com.zutubi.pulse.model.EmailContactPoint" discriminator-value="EMAIL">

        </subclass>

        <subclass name="com.zutubi.pulse.model.JabberContactPoint" discriminator-value="JABBER">

        </subclass>
    </class>

    <!-- Subscription. -->
    <class name="com.zutubi.pulse.model.Subscription" table="SUBSCRIPTION" lazy="false">
        <cache usage="read-write"/>

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="TYPE" type="string" length="255"/>

        <many-to-one name="contactPoint" column="CONTACT_ID" class="com.zutubi.pulse.model.ContactPoint" insert="true" lazy="false"/>

        <property name="template" column="TEMPLATE" type="string" length="255"/>

        <subclass name="com.zutubi.pulse.model.PersonalBuildSubscription" discriminator-value="PERSONAL"/>

        <subclass name="com.zutubi.pulse.model.ProjectBuildSubscription" discriminator-value="PROJECT">    
            <many-to-one name="condition" column="CONDITION_ID" class="com.zutubi.pulse.model.ProjectBuildCondition" cascade="all" lazy="false"/>

            <bag name="projects" table="SUBSCRIPTION_PROJECTS" cascade="none" lazy="false">
                <cache usage="read-write"/>
                <key column="SUBSCRIPTION_ID"/>
                <many-to-many class="com.zutubi.pulse.model.Project" column="PROJECT_ID"/>
            </bag>
        </subclass>
    </class>

    <class name="com.zutubi.pulse.model.ProjectBuildCondition" table="PROJECT_BUILD_CONDITION">
        <cache usage="read-write"/>

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="CONDITION_TYPE" type="string" length="63"/>

        <subclass name="com.zutubi.pulse.model.AllProjectBuildCondition" discriminator-value="ALL"/>

        <subclass name="com.zutubi.pulse.model.SimpleProjectBuildCondition" discriminator-value="SIMPLE">
            <property name="expression" column="EXPRESSION" type="string" length="1023"/>
        </subclass>

        <subclass name="com.zutubi.pulse.model.RepeatedFailuresProjectBuildCondition" discriminator-value="REPEATED">
            <property name="x" column="REPEATED_X" type="int"/>
            <property name="units" column="REPEATED_UNITS" type="string" length="31"/>
        </subclass>

        <subclass name="com.zutubi.pulse.model.AdvancedProjectBuildCondition" discriminator-value="ADVANCED">
            <property name="expression" column="ADVANCED_EXPRESSION" type="string" length="1023"/>
        </subclass>
    </class>

    <query name="subscription.findByProject" cacheable="true"><![CDATA[
        from Subscription s
        where :project in elements(s.projects)
    ]]></query>

</hibernate-mapping>