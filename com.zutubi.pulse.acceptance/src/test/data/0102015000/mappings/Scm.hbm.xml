<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.model.Scm" table="SCM" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="SCMTYPE" type="string" length="255"/>

        <property name="path" column="PATH" type="string" length="1023"/>

        <property name="monitor" column="MONITOR" type="boolean"/>

        <property name="pollingInterval" column="POLLING_INTERVAL" type="integer"/>

        <property name="lastPollTime" column="LAST_POLL_TIME" type="long"/>

        <property name="properties" column="PROPERTIES" type="com.zutubi.pulse.master.util.hibernate.PropertiesType" length="4096"/>

        <subclass name="com.zutubi.pulse.model.P4" discriminator-value="P4" dynamic-update="false">
        </subclass>

        <subclass name="com.zutubi.pulse.model.Svn" discriminator-value="SVN" dynamic-update="false">
        </subclass>

        <subclass name="com.zutubi.pulse.model.Cvs" discriminator-value="CVS" dynamic-update="false">
        </subclass>

    </class>

</hibernate-mapping>
