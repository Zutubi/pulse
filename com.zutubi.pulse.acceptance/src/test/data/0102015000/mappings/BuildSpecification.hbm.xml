<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.master.model.BuildSpecification" table="BUILD_SPECIFICATION" lazy="false">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <many-to-one name="pname" column="PNAME" class="com.zutubi.pulse.core.model.PersistentName" cascade="save-update" lazy="false"/>

        <property name="isolateChangelists" column="ISOLATE_CHANGELISTS" type="boolean"/>

        <property name="retainWorkingCopy" column="RETAIN_WORKING_COPY" type="boolean"/>

        <property name="timeout" column="TIMEOUT" type="int"/>

        <property name="checkoutSchemeName" column="CHECKOUT_SCHEME" type="string" length="50"/>

        <property name="forceClean" column="FORCE_CLEAN" type="boolean"/>

        <property name="prompt" column="PROMPT" type="boolean"/>

        <many-to-one name="root" class="com.zutubi.pulse.master.model.BuildSpecificationNode"
                     column="ROOT_ID" cascade="all" lazy="false"/>

        <bag name="properties" cascade="all,delete-orphan" lazy="false">
            <key column="SPECIFICATION_ID"/>
            <one-to-many class="com.zutubi.pulse.core.config.ResourceProperty"/>
        </bag>
    </class>

    <class name="com.zutubi.pulse.master.model.BuildSpecificationNode" table="BUILD_SPECIFICATION_NODE" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <component name="stage" class="com.zutubi.pulse.master.model.BuildStage">
            <many-to-one name="pname" column="PNAME" class="com.zutubi.pulse.core.model.PersistentName" cascade="save-update" lazy="false"/>

            <many-to-one name="hostRequirements" class="com.zutubi.pulse.master.model.AbstractBuildHostRequirements"
                         column="BUILD_HOST_REQUIREMENTS_ID"
                         cascade="all" unique="true"/>

            <property name="recipe" type="string" length="255"/>
        </component>

        <bag name="resourceRequirements" cascade="all,delete-orphan" table="RESOURCE_REQUIREMENTS" lazy="false">
            <key column="NODE_ID"/>
            <composite-element class="com.zutubi.pulse.core.config.ResourceRequirement">
                <property name="resource" type="string" not-null="true"/>
                <property name="version" type="string"/>
            </composite-element>
        </bag>

        <bag name="postActions" cascade="all,delete-orphan" lazy="false">
            <key column="SPECIFICATION_NODE_ID"/>
            <one-to-many class="com.zutubi.pulse.master.model.PostBuildAction"/>
        </bag>

        <list name="children" cascade="all,delete-orphan" lazy="false">
            <key column="PARENT_ID"/>
            <index column="ORDINAL"/>
            <one-to-many class="com.zutubi.pulse.master.model.BuildSpecificationNode"/>
        </list>
    </class>

    <class name="com.zutubi.pulse.core.model.PersistentName" table="PERSISTENT_NAME">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" type="string" column="NAME"/>
    </class>

    <class name="com.zutubi.pulse.master.model.AbstractBuildHostRequirements" table="BUILD_HOST_REQUIREMENTS" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="REQUIREMENTS_TYPE" type="string" length="63"/>

        <subclass name="com.zutubi.pulse.master.model.AnyCapableBuildHostRequirements" discriminator-value="ANY_CAPABLE"/>

        <subclass name="com.zutubi.pulse.master.model.MasterBuildHostRequirements" discriminator-value="MASTER"/>

        <subclass name="com.zutubi.pulse.master.model.SlaveBuildHostRequirements" discriminator-value="SLAVE">
            <many-to-one name="slave" class="com.zutubi.pulse.master.model.Slave" cascade="none"/>
        </subclass>
    </class>

    <class name="com.zutubi.pulse.core.config.ResourceProperty" table="RESOURCE_PROPERTY">
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" column="NAME" type="string" length="1023" not-null="true"/>
        <property name="value" column="VALUE" type="string" length="1023" not-null="true"/>
        <property name="addToEnvironment" column="ADD_TO_ENVIRONMENT" type="boolean"/>
        <property name="addToPath" column="ADD_TO_PATH" type="boolean"/>
        <property name="resolveVariables" column="RESOLVE_VARIABLES" type="boolean"/>
    </class>
</hibernate-mapping>
