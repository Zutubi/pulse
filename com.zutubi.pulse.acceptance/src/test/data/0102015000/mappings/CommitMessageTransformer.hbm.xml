<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.zutubi.pulse.model.CommitMessageTransformer" table="COMMIT_MESSAGE_TRANSFORMER" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="TYPE" type="string" length="255"/>

        <property name="name" column="NAME" type="string" length="255"/>

        <property name="properties" column="PROPERTIES" type="com.zutubi.pulse.master.util.hibernate.PropertiesType" length="4095"/>

        <bag name="projects" table="COMMIT_MESSAGE_TRANSFORMER_PROJECTS" lazy="false">
            <key column="TRANSFORMER_ID"/>
            <element type="long" column="PROJECT_ID" not-null="true"/>
        </bag>

        <subclass name="com.zutubi.pulse.committransformers.LinkCommitMessageTransformer" discriminator-value="LINK" dynamic-update="false">
        </subclass>

        <subclass name="com.zutubi.pulse.committransformers.CustomCommitMessageTransformer" discriminator-value="CUSTOM" dynamic-update="false">
        </subclass>

        <subclass name="com.zutubi.pulse.committransformers.JiraCommitMessageTransformer" discriminator-value="JIRA" dynamic-update="false">
        </subclass>

    </class>

</hibernate-mapping>