<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">

    <info organisation="zutubi" module="pulse-server-core" status="integration">
        <ivyauthor name="zutubi" url="http://www.zutubi.com/"/>
        <description homepage="http://www.zutubi.com/">
            description....
        </description>
    </info>

    <configurations>
        <conf name="release" description="Defines those packages that are included in the final release."/>
        <conf name="external" description="All of those packages not written by Zutubi."/>
        <conf name="build" description="All of the packages required during the build."/>
    </configurations>

    <publications>
        <artifact name="server-core" type="jar" conf="release, build"/>
        <artifact name="server-core-test" type="jar" conf="build"/>
    </publications>

    <dependencies>

        <dependency org="zutubi" name="pulse-core" rev="latest.integration" conf="external->external"/>
        <dependency org="zutubi" name="pulse-core" rev="latest.integration" conf="release->release"/>
        <dependency org="zutubi" name="pulse-core" rev="latest.integration" conf="build->build"/>

        <dependency org="apache" name="commons-collections" rev="3.1" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-dbcp" rev="1.2.1" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-fileupload" rev="1.0" conf="external,build,release->default"/>
        <dependency org="apache" name="jasper" rev="5.5.9" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-pool" rev="1.2" conf="external,build,release->default"/>

        <dependency org="jwebunit" name="jwebunit" rev="1.2" conf="external,build->default"/>
        
        <dependency org="jetty" name="org.mortbay.jetty" rev="5.1.6" conf="external,build,release->default"/>
        <dependency org="springframework" name="spring" rev="1.2.6"
                    conf="external,build,release->spring-aop,spring-jdbc,spring-beans,spring-context,spring-core,spring-orm,spring-hibernate3,spring-support"/>

        <dependency org="acegisecurity" name="acegisecurity" rev="1.0.0-RC1" conf="external,build,release->default"/>

        <dependency org="opensymphony" name="sitemesh" rev="2.2.1" conf="external,build,release->default"/>
        <dependency org="opensymphony" name="webwork" rev="2.2.1" conf="external,build,release->default"/>
        <!-- we need the portlet api at the moment since the IBM JDK on the power pc does not include it. -->
        <dependency org="portlet-api" name="portlet-api" rev="1.0" conf="external,build,release->default"/>

        <!-- database support -->
        <dependency org="hibernate" name="hibernate" rev="3.1.1" conf="external,build,release->default"/>
        <dependency org="hsqldb" name="hsqldb" rev="1.8.0.1" conf="external,build,release->default"/>
        <dependency org="ehcache" name="ehcache" rev="1.1" conf="external,build,release->default"/>

        <dependency org="sun" name="servlet" rev="2.4" conf="external,build,release->default"/>
        <dependency org="sun" name="transaction" rev="1.0.1b" conf="external,build,release->default"/>

        <dependency org="caucho" name="hessian" rev="3.0.13" conf="external,build,release->default"/>

        <!-- scm support -->
        <dependency org="javasvn" name="javasvn" rev="0.9.2" conf="external,build,release->default"/>
        <dependency org="netbeans" name="javacvs" rev="11nov2005" conf="external,build,release->default"/>
        <dependency org="jssh" name="jssh" rev="0.2.7" conf="external,build,release->default"/>

    </dependencies>


</ivy-module>
