<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">

    <info organisation="cinnamonbob" module="server-core" status="integration">
        <ivyauthor name="cinnamonbob" url="http://www.cinnamonbob.com/"/>
        <description homepage="http://www.cinnamonbob.com/">
            description....
        </description>
    </info>

    <configurations>
        <conf name="external" description="external dependencies"/>
        <conf name="internal" description="internal dependencies"/>
    </configurations>

    <publications>
        <artifact name="server-core" type="jar" conf="internal"/>
        <artifact name="server-core-test" type="jar" conf="internal"/>
    </publications>

    <dependencies>

        <dependency org="cinnamonbob" name="core" rev="latest.integration" conf="external->external"/>
        <dependency org="cinnamonbob" name="core" rev="latest.integration" conf="internal->internal"/>

        <dependency org="apache" name="commons-collections" rev="3.1" conf="external->default"/>
        <dependency org="apache" name="commons-dbcp" rev="1.2.1" conf="external->default"/>
        <dependency org="apache" name="commons-fileupload" rev="1.0" conf="external->default"/>
        <dependency org="apache" name="jasper" rev="5.5.9" conf="external->default"/>
        <dependency org="apache" name="commons-pool" rev="1.2" conf="external->default"/>

        <dependency org="junit" name="junit" rev="3.8.1" conf="external->default"/>
        <dependency org="jetty" name="org.mortbay.jetty" rev="5.1.6" conf="external->default"/>
        <dependency org="springframework" name="spring" rev="1.2.6"
                    conf="external->spring-aop,spring-jdbc,spring-beans,spring-context,spring-core,spring-orm,spring-hibernate3,spring-support"/>

        <dependency org="acegisecurity" name="acegisecurity" rev="1.0.0-RC1" conf="external->default"/>

        <dependency org="opensymphony" name="sitemesh" rev="2.2.1" conf="external->default"/>
        <dependency org="opensymphony" name="webwork" rev="2.2" conf="external->default"/>

        <!-- database support -->
        <dependency org="hibernate" name="hibernate" rev="3.1.1" conf="external->default"/>
        <dependency org="hsqldb" name="hsqldb" rev="1.8.0.1" conf="external->default"/>
        <dependency org="ehcache" name="ehcache" rev="1.1" conf="external->default"/>

        <dependency org="sun" name="servlet" rev="2.4" conf="external->default"/>
        <dependency org="sun" name="transaction" rev="1.0.1b" conf="external->default"/>

        <dependency org="caucho" name="hessian" rev="3.0.13" conf="external->default"/>

        <!-- scm support -->
        <dependency org="javasvn" name="javasvn" rev="0.8.8.1" conf="external->default"/>
        <dependency org="netbeans" name="javacvs" rev="4.0" conf="external->default"/>
        <dependency org="jssh" name="jssh" rev="0.2.7" conf="external->default"/>

    </dependencies>


</ivy-module>
