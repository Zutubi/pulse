<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://www.jayasoft.fr/org/ivyrep/ivy-doc.xsl"?>
<ivy-module version="1.0">

    <info organisation="zutubi" module="pulse-server-core" status="release" revision="1.2.5">
        <ivyauthor name="zutubi" url="http://www.zutubi.com/"/>
        <description homepage="http://www.zutubi.com/">
            The pulse server core module is for all of those pulse components that
            are common to both the master and slave deployments.
        </description>
    </info>

    <configurations>
        <conf name="release" description="Defines those packages that are included in the final release."/>
        <conf name="external" description="All of those packages that are external to Pulse."/>
        <conf name="build" description="All of the packages required during the build."/>
    </configurations>

    <publications>
        <artifact name="server-core" type="jar" conf="release, build"/>
        <artifact name="server-core-test" type="jar" conf="build"/>
    </publications>

    <dependencies>

        <dependency org="zutubi" name="pulse-core" rev="1.2.5" conf="external->external"/>
        <dependency org="zutubi" name="pulse-core" rev="1.2.5" conf="release->release"/>
        <dependency org="zutubi" name="pulse-core" rev="1.2.5" conf="build->build"/>

        <dependency org="apache" name="commons-collections" rev="3.1" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-cli" rev="1.0" conf="external,build,release->default"/>
        <dependency org="apache" name="commons-vfs" rev="20061011" conf="external,build,release->default"/>

        <dependency org="caucho" name="hessian" rev="3.0.13" conf="external,build,release->default"/>

        <dependency org="jetty" name="org.mortbay.jetty" rev="5.1.6" conf="external,build,release->default"/>

        <dependency org="springframework" name="spring" rev="2.0" conf="external,build,release->spring-beans,spring-context,spring-core"/>

        <dependency org="sun" name="servlet" rev="2.4" conf="external,build,release->default"/>

        <dependency org="mockobjects" name="mockobjects-core" rev="0.09" conf="external,build->default"/>
        <dependency org="mockobjects" name="mockobjects-jdk1.4" rev="0.09" conf="external,build->default"/>
        <dependency org="mockobjects" name="mockobjects-jdk1.4-j2ee1.3" rev="0.09" conf="external,build->default"/>
        <dependency org="mockobjects" name="mockobjects-alt-jdk1.4" rev="0.09" conf="external,build->default"/>
        <dependency org="mockobjects" name="mockobjects-alt-jdk1.4-j2ee1.3" rev="0.09" conf="external,build->default"/>

    </dependencies>


</ivy-module>
