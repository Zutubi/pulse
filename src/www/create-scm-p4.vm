<html>
<head>
    <title>create-scm</title>
</head>
<content tag="action">scm.p4.create</content>
<body>

    #parse("/template/includes/actionerrors.vm")

#bodytag (Form "action='createP4.action'" "method='post'")

    #tag (Hidden "name='id'")
    #tag (Hidden "name='name'")
    #tag (Hidden "name='path'")

    <fieldset>
        #tag (TextField "required='true'" "name='p4.port'" "tabindex='1'")
        #tag (TextField "required='true'" "name='p4.user'" "tabindex='2'")
        #tag (Password "name='p4.password'" "tabindex='3'")
        #tag (TextField "required='true'" "name='p4.client'" "tabindex='4'")
    </fieldset>

    <fieldset class="submit">
        #tag (Submit "value=getText('save.name')" "name='save'" "tabindex='5'")
        #tag (Submit "value=getText('cancel.name')" "name='cancel'" "tabindex='6'")
    </fieldset>

 #end

</body>
</html>
