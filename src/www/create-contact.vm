<html>
<head>
    <title>create-contact</title>
</head>
<body>

    #parse("/template/includes/actionerrors.vm")
    
    #bodytag (Form "action='createContactPoint.action'" "method='post'")
        #tag (Hidden "name='id'")
        <fieldset>
            #tag (TextField "name='contact.name'" "tabindex='1'")
            #tag (TextField "label='contact.email'" "name='contact.email'" "tabindex='2'")
        </fieldset>

        <fieldset class="submit">
            #tag (Submit "value=getText('save.name')" "name='save'" "tabindex='3'")
            #tag (Submit "value=getText('cancel.name')" "name='cancel'" "tabindex='4'")
        </fieldset>
    #end

</body>
</html>
