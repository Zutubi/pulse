<html>
    <head>
        <title>view user</title>    
    </head>
    <body>
    
        <p>User profile:</p>
        <div>
            <div>Login: $user.login</div>
            <div>Name: $user.name</div>
        </div>
        <p>Contact points:</p>
        #if ($user.contactPoints.size() == 0)
            No contact points configured
        #else
            <ul>
            #foreach ($contact in $user.contactPoints)
                <li>$contact.name: $contact.uid (<a href="deleteContactPoint.action?id=$user.id&name=$contact.name">delete</a>)</li>
            #end
            </ul>
        #end

        <p>Add new email contact point</p>
        #bodytag (Form "action='createContactPoint.action'" "method='post'")
            #tag (Hidden "name='id'" "value=user.id")
            <fieldset>
                #tag (TextField "name='contact.name'")
                #tag (TextField "label='contact.email'" "name='contact.uid'")
            </fieldset>

            <fieldset class="submit">
                #tag (Submit "value=getText('cancel.name')" "name='cancel'")
                #tag (Submit "value=getText('save.name')" "name='save'")
            </fieldset>
        #end

    </body>
</html>