<html>
<head>
    <title>edit-project</title>
</head>
<content tag="action">project.edit</content>
<body>

    #parse("/template/includes/actionerrors.vm")
    
#bodytag (Form "action='editProject.action'" "method='post'")  
    
        #tag (Hidden "name='id'")
        
    <fieldset>
        #tag (TextField "name='project.name'" "tabindex='1'")
        #tag (TextField "name='project.description'" "tabindex='2'")
    </fieldset>
        
    <fieldset class="submit">
        #tag (Submit "value=getText('save.name')" "name='save'" "tabindex='3'")
        #tag (Submit "value=getText('cancel.name')" "name='cancel'" "tabindex='4'")
    </fieldset>

#end 

</body>
</html>
