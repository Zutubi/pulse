<?xml version="1.0"?>
<!--<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >-->
<hibernate-mapping>

    <class name="com.cinnamonbob.model.Project" table="Project" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>
        
        
        <property name="name" column="NAME" type="string" length="255"/>            
        <property name="description" column="DESCRIPTION" type="string" length="4096"/>            

        <bag name="scms" inverse="true" cascade="all">
            <key column="PROJECTID"/>
            <one-to-many class="com.cinnamonbob.model.Scm"/>
        </bag>
        
    </class>

</hibernate-mapping>