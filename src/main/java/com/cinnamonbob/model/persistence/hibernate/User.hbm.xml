<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.cinnamonbob.model.User" table="User" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="login" column="LOGIN" type="string" not-null="false" length="255"/>

        <property name="name" column="NAME" type="string" not-null="false" length="255"/>

        <bag name="contactPoints" inverse="true" cascade="all">
            <key column="USERID"/>
            <one-to-many class="com.cinnamonbob.model.ContactPoint"/>
        </bag>

    </class>

    <!-- Contact points. -->
    <class name="com.cinnamonbob.model.ContactPoint" table="ContactPoints">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="TYPE" type="string"/>

        <property name="name" column="NAME" type="string" not-null="false" length="255"/>
        <property name="uid" column="UID" type="string" not-null="false" length="255"/>
        <property name="properties" column="PROPERTIES" type="com.cinnamonbob.util.PropertiesType" not-null="false" length="4095"/>

        <many-to-one name="user" column="USERID" class="com.cinnamonbob.model.User" insert="true"/>

        <subclass name="com.cinnamonbob.model.EmailContactPoint" discriminator-value="EMAIL">

        </subclass>

    </class>


</hibernate-mapping>