<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.cinnamonbob.model.Schedule" table="SCHEDULE" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <property name="name" column="NAME" type="string" not-null="true" length="255"/>

        <many-to-one name="project"
            column="PROJECTID"
            class="com.cinnamonbob.model.Project"
            not-null="true"
            insert="true"
            lazy="false"
            cascade="all"/>

        <many-to-one name="trigger"
            column="TRIGGER"
            class="com.cinnamonbob.model.Trigger"
            not-null="true"
            insert="true"
            lazy="false"
            cascade="all"/>

        <many-to-one name="task"
            column="TASK"
            class="com.cinnamonbob.model.Task"
            not-null="true"
            insert="true"
            lazy="false"
            cascade="all"/>

    </class>

    <class name="com.cinnamonbob.model.Trigger" table="TRIGGER">
        
        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="SCHEDULE_TYPE" type="string"/>
        
        <many-to-one name="schedule" class="com.cinnamonbob.model.Schedule" column="SCHEDULEID" lazy="false" cascade="all"/>

        <subclass name="com.cinnamonbob.model.CronTrigger" discriminator-value="CRON">
        
            <property name="cronExpression" column="CRON_EXPRESSION" type="string" length="255"/>
            
        </subclass>
        
    </class>

    <class name="com.cinnamonbob.model.Task" table="TASK">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>

        <discriminator column="SCHEDULE_TYPE" type="string"/>

        <many-to-one name="schedule" class="com.cinnamonbob.model.Schedule" column="SCHEDULEID" lazy="false" cascade="all"/>

        <subclass name="com.cinnamonbob.model.BuildTask" discriminator-value="BUILD">

            <property name="recipe" column="RECIPE" type="string" length="255"/>

        </subclass>

    </class>

    <query name="schedule.findByProject"><![CDATA[
        from Schedule s
        where s.project = :project
    ]]></query>
    
</hibernate-mapping>