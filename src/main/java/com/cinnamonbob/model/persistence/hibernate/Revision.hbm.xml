<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="com.cinnamonbob.model.Revision" table="REVISION" lazy="false">

        <id name="id" type="java.lang.Long" column="ID" unsaved-value="0">
            <generator class="hilo"/>
        </id>
        
        <discriminator column="REVISIONTYPE" type="string" length="255"/>
        
        <property name="properties" column="PROPERTIES" type="com.cinnamonbob.util.PropertiesType" length="4096"/>
        
        <subclass name="com.cinnamonbob.model.NumericalRevision" discriminator-value="NUMERICAL" dynamic-update="false">
        </subclass>
        
        <subclass name="com.cinnamonbob.model.CvsRevision" discriminator-value="CVS" dynamic-update="false">
        </subclass>

    </class>

</hibernate-mapping>
