<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message>$action.getText("scm.name") is required.</message>
        </field-validator>
    </field>
    <field name="port">
        <field-validator type="requiredstring">
            <message>P4PORT is required.</message>
        </field-validator>
    </field>
    <field name="user">
        <field-validator type="requiredstring">
            <message>P4USER is required.</message>
        </field-validator>
    </field>
    <field name="client">
        <field-validator type="requiredstring">
            <message>P4CLIENT is required.</message>
        </field-validator>
    </field>
</validators>