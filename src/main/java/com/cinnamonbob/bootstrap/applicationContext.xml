<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="velocityEngine" class="com.cinnamonbob.bootstrap.velocity.VelocityEngineFactoryBean"/>

    <bean id="quartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="configLocation">
            <value>classpath:com/cinnamonbob/bootstrap/quartz/quartz.properties</value>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.DefaultConfigurationManager">
        <property name="bootstrapManager">
            <ref bean="bootstrapManager"/>
        </property>
    </bean>

    <bean id="jettyServer" class="com.cinnamonbob.bootstrap.jetty.JettyServerFactoryBean" destroy-method="shutdown">
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="jettyManager" class="com.cinnamonbob.bootstrap.jetty.JettyManager">
        <property name="jettyServer">
            <ref bean="jettyServer"/>
        </property>
        <property name="bootstrapManager">
            <ref bean="bootstrapManager"/>
        </property>
    </bean>

    <bean id="extensionManager" class="com.cinnamonbob.core.ext.DefaultExtensionManager" init-method="init"/>

    <bean id="buildManager" class="com.cinnamonbob.core.BuildManager"/>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate.LocalSessionFactoryBean">
        <property name="mappingResources">
            <list>
                <value>com/cinnamonbob/model/User.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">net.sf.hibernate.dialect.HSQLDialect</prop>
            </props>
        </property>
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName">
            <value>org.hsqldb.jdbcDriver</value>
        </property>
        <property name="url">
            <value>jdbc:hsqldb:.</value>
        </property>
        <property name="username">
            <value>sa</value>
        </property>
        <property name="password">
            <value></value>
        </property>
    </bean>
</beans>
