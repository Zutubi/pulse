<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="velocityEngine" class="com.cinnamonbob.bootstrap.velocity.VelocityEngineFactoryBean"/>

    <bean id="quartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="configLocation">
            <value>classpath:com/cinnamonbob/bootstrap/quartz/quartz.properties</value>
        </property>
    </bean>

    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.DefaultConfigurationManager">
        <property name="bootstrapManager">
            <ref bean="bootstrapManager"/>
        </property>
    </bean>

    <bean id="jettyServer" class="com.cinnamonbob.bootstrap.jetty.JettyServerFactoryBean" destroy-method="shutdown">
        <property name="configurationManager">
            <ref bean="configurationManager"/>
        </property>
    </bean>

    <bean id="jettyManager" class="com.cinnamonbob.bootstrap.jetty.JettyManager">
        <property name="jettyServer">
            <ref bean="jettyServer"/>
        </property>
        <property name="bootstrapManager">
            <ref bean="bootstrapManager"/>
        </property>
    </bean>

</beans>
