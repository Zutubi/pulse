<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="startupManager" class="com.cinnamonbob.bootstrap.StartupManager">        
        <property name="systemContexts">
            <list>
                <value>com/cinnamonbob/bootstrap/applicationContext.xml</value>    
                <value>com/cinnamonbob/bootstrap/databaseContext.xml</value>
                <value>com/cinnamonbob/bootstrap/webworkContext.xml</value>
            </list>
        </property>        
    </bean>    
    
    <bean id="configurationManager" class="com.cinnamonbob.bootstrap.DefaultConfigurationManager" init-method="init">
        <property name="defaultProperties">
            <props>
                <prop key="name">value</prop>
            </props>
        </property>
        <property name="applicationPaths">
            <bean class="com.cinnamonbob.bootstrap.ConfigurableApplicationPaths">
                <property name="contentRoot"><value>src/www</value></property>
                <property name="configRoot"><value>src/etc</value></property>
                <property name="templateRoot"><value>src/templates</value></property>
                <property name="userConfigRoot"><value>src/main/etc</value></property>
            </bean>
        </property>
    </bean>
    
</beans>
