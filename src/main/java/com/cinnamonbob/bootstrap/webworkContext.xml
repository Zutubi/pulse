<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="spring-object-factory" class="com.opensymphony.xwork.spring.SpringObjectFactory" init-method="initObjectFactory"/>

    <bean name="serverStatusAction" class="com.cinnamonbob.web.ServerStatusAction" singleton="false"/>
    <bean name="viewProjectsAction" class="com.cinnamonbob.web.ViewProjectsAction" singleton="false"/>
    <bean name="viewProjectAction" class="com.cinnamonbob.web.ViewProjectAction" singleton="false"/>
    <bean name="updateProjectAction" class="com.cinnamonbob.web.UpdateProjectAction" singleton="false"/>
    <bean name="scheduleBuildAction" class="com.cinnamonbob.web.ScheduleBuildAction" singleton="false"/>
    <bean name="viewBuildAction" class="com.cinnamonbob.web.ViewBuildAction" singleton="false"/>
    <bean name="viewArtifactAction" class="com.cinnamonbob.web.ViewArtifactAction" singleton="false"/>
    <bean name="createUserAction" class="com.cinnamonbob.web.CreateUserAction" singleton="false" autowire="byName"/>   

</beans>
