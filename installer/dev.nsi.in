;Interface Settings

  !define MUI_ICON "..\..\..\installer\pulse.ico"
  !define MUI_UNICON "..\..\..\installer\pulse.ico"
  !define MUI_HEADERIMAGE
  !define MUI_HEADERIMAGE_BITMAP "..\..\..\installer\pulse-banner.bmp"
