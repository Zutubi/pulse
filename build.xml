<?xml version="1.0" encoding="UTF-8"?>
<project name="Cinnamon Bob" default="default" basedir=".">

    <property name="module" value="core"/>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="_prepare">
        <mkdir dir="build"/>
        <mkdir dir="build/lib"/>
    </target>

    <target name="build.core" depends="_prepare">
        <ant antfile="build.xml" dir="core" target="clean"/>
        <ant antfile="build.xml" dir="core" target="jar">
            <property name="publish.dir" value="../build/lib"/>
        </ant>
    </target>

    <target name="build.local" depends="build.core">

        <ant antfile="build.xml" dir="local" target="clean"/>
        <ant antfile="build.xml" dir="local" target="jar">
            <property name="lib.dir" value="../build/lib"/>
            <property name="publish.dir" value="../build/lib"/>
        </ant>

    </target>


    <target name="default">

    </target>

</project>