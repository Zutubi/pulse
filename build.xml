<?xml version="1.0" encoding="UTF-8"?>
<project name="Cinnamon Bob" default="default" basedir=".">

    <property name="module" value="core"/>
    <property name="publish.dir" value="../build"/>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="_prepare">
        <mkdir dir="build"/>
        <mkdir dir="build/lib"/>
    </target>

    <target name="build.core" depends="_prepare">
        <ant antfile="build.xml" dir="core" target="clean"/>
        <ant antfile="build.xml" dir="core" target="publish">
            <property name="publish.bin.dir" value="${publish.dir}/bin"/>
            <property name="publish.lib.dir" value="${publish.dir}/lib"/>
        </ant>
    </target>

    <target name="build.local" depends="build.core">

        <ant antfile="build.xml" dir="local" target="clean"/>
        <ant antfile="build.xml" dir="local" target="publish">
            <property name="lib.dir" value="../build/lib"/>
            <property name="publish.bin.dir" value="${publish.dir}/bin"/>
            <property name="publish.lib.dir" value="${publish.dir}/lib"/>
        </ant>

    </target>


    <target name="default">

    </target>

</project>